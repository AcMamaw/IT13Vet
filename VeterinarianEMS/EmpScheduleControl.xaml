<UserControl x:Class="VeterinarianEMS.EmpScheduleControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="380" Height="450" Background="Transparent">

    <UserControl.Resources>
        <!-- Title -->
        <Style TargetType="TextBlock" x:Key="TitleStyle">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#30ABA0"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <!-- Header -->
        <Style TargetType="TextBlock" x:Key="HeaderStyle">
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#30ABA0"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <!-- Label -->
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Margin" Value="0,6,0,0"/>
        </Style>

        <!-- Value -->
        <Style TargetType="TextBlock" x:Key="ValueStyle">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#555555"/>
            <Setter Property="Margin" Value="0,2,0,5"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <!-- Primary Button -->
        <Style TargetType="Button" x:Key="PrimaryButtonStyle">
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Background" Value="#30ABA0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#38C0B2"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#259489"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="10">
        <Border Background="White"
                CornerRadius="10"
                Padding="15"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Title -->
                <TextBlock Grid.Row="0" Text="Employee Schedule" Style="{StaticResource TitleStyle}"/>

                <!-- Schedule Details -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="5,10,5,10">
                    <StackPanel>
                        <TextBlock Text="Shift Description" Style="{StaticResource HeaderStyle}"/>

                        <TextBlock Text="Shift Name:" Style="{StaticResource LabelStyle}"/>
                        <TextBlock x:Name="txtShiftName" Style="{StaticResource ValueStyle}" Text="-" />

                        <TextBlock Text="Start Time:" Style="{StaticResource LabelStyle}"/>
                        <TextBlock x:Name="txtStartTime" Style="{StaticResource ValueStyle}" Text="-" />

                        <TextBlock Text="End Time:" Style="{StaticResource LabelStyle}"/>
                        <TextBlock x:Name="txtEndTime" Style="{StaticResource ValueStyle}" Text="-" />

                        <TextBlock Text="Days:" Style="{StaticResource LabelStyle}"/>
                        <TextBlock x:Name="txtShiftDays" Style="{StaticResource ValueStyle}" Text="-" />
                    </StackPanel>
                </ScrollViewer>

                <!-- Close Button -->
                <Button Grid.Row="2"
                        Content="Close"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Margin="0,15,0,0"
                        Click="Close_Click"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
