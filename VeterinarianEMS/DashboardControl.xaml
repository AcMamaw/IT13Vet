<UserControl x:Class="VeterinarianEMS.DashboardControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VeterinarianEMS"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <!-- Dashboard Card Style without shadow -->
        <Style TargetType="Border" x:Key="DashboardCardStyle">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="10,0"/>
        </Style>
    </UserControl.Resources>

    <Grid Background="#F0F0F0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Main Title -->
        <TextBlock Grid.Row="0"
                   Text="Dashboard"
                   FontSize="28"
                   FontWeight="Bold"
                   Margin="0,0,0,20"
                   Foreground="Black"/>

        <!-- Summary Cards Grid -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Total Employees Card -->
            <Border Grid.Column="0" Style="{StaticResource DashboardCardStyle}" BorderBrush="#4A90E2" BorderThickness="4,0,0,0">
                <StackPanel>
                    <materialDesign:PackIcon Kind="AccountGroup" Width="30" Height="30" Foreground="#4A90E2"/>
                    <TextBlock Text="Total Employees" FontSize="14" FontWeight="SemiBold" Margin="0,10,0,5"/>
                    <TextBlock Text="1" FontSize="28" FontWeight="Bold" Foreground="Black"/>
                </StackPanel>
            </Border>

            <!-- Attendance Card -->
            <Border Grid.Column="1" Style="{StaticResource DashboardCardStyle}" BorderBrush="#50E3C2" BorderThickness="4,0,0,0">
                <StackPanel>
                    <materialDesign:PackIcon Kind="CalendarCheck" Width="30" Height="30" Foreground="#50E3C2"/>
                    <TextBlock Text="Attendance" FontSize="14" FontWeight="SemiBold" Margin="0,10,0,5"/>
                    <TextBlock Text="0/1" FontSize="28" FontWeight="Bold" Foreground="Black"/>
                </StackPanel>
            </Border>

            <!-- Pending Requests Card -->
            <Border Grid.Column="2" Style="{StaticResource DashboardCardStyle}" BorderBrush="#E35050" BorderThickness="4,0,0,0">
                <StackPanel>
                    <materialDesign:PackIcon Kind="Email" Width="30" Height="30" Foreground="#E35050"/>
                    <TextBlock Text="Pending Requests" FontSize="14" FontWeight="SemiBold" Margin="0,10,0,5"/>
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="Leave: 0" FontSize="16" FontWeight="SemiBold" Foreground="Black"/>
                        <TextBlock Text="Overtime: 0" FontSize="16" FontWeight="SemiBold" Foreground="Black"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Days Until Next Payroll Card -->
            <Border Grid.Column="3" Style="{StaticResource DashboardCardStyle}" BorderBrush="#9B59B6" BorderThickness="4,0,0,0">
                <StackPanel>
                    <materialDesign:PackIcon Kind="CashMultiple" Width="30" Height="30" Foreground="#9B59B6"/>
                    <TextBlock Text="Days Until Next Payroll" FontSize="14" FontWeight="SemiBold" Margin="0,10,0,5"/>
                    <TextBlock Text="5" FontSize="28" FontWeight="Bold" Foreground="Black"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Attendance Trends Section -->
        <Border Grid.Row="2" 
                Background="White"
                CornerRadius="8"
                Padding="20"
                Margin="10,0">
            <StackPanel>
                <TextBlock Text="30-Day Attendance Trends" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                <!-- Placeholder for the chart -->
                <TextBlock Text="[Chart Placeholder]" Opacity="0.5" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,50"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
