<UserControl x:Class="VeterinarianEMS.Controls.EmpView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="Auto" Height="600" Background="Transparent">

    <Grid Margin="10">
        <Border Background="White" CornerRadius="8" Padding="20"
                BorderBrush="#CCC" BorderThickness="1"
                HorizontalAlignment="Center" VerticalAlignment="Center"
                Width="700" Height="600">

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Title -->
                    <TextBlock Text="Employee Details"
                               Foreground="#30ABA0"
                               FontSize="22"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,20"/>

                    <!-- Two-column layout -->
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Employee Description (Left) -->
                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="Employee Description"
                                       FontSize="16" FontWeight="Bold"
                                       Foreground="#333" Margin="0,0,0,10"/>
                            <TextBlock Text="Full Name:" FontWeight="Bold"/>
                            <TextBlock x:Name="FullNameTextBlock" FontSize="14"/>

                            <TextBlock Text="Sex:" FontWeight="Bold"/>
                            <TextBlock x:Name="SexTextBlock" FontSize="14"/>

                            <TextBlock Text="Age:" FontWeight="Bold"/>
                            <TextBlock x:Name="AgeTextBlock" FontSize="14"/>

                            <TextBlock Text="Contact Number:" FontWeight="Bold"/>
                            <TextBlock x:Name="ContactTextBlock" FontSize="14"/>

                            <TextBlock Text="Address:" FontWeight="Bold"/>
                            <TextBlock x:Name="AddressTextBlock" TextWrapping="Wrap" FontSize="14"/>

                            <TextBlock Text="Date of Birth:" FontWeight="Bold"/>
                            <TextBlock x:Name="DOBTextBlock" FontSize="14"/>
                        </StackPanel>

                        <!-- Shift Description (Right) -->
                        <StackPanel Grid.Column="1" Margin="10,0,0,0">
                            <TextBlock Text="Shift Description"
                                       FontSize="16" FontWeight="Bold"
                                       Foreground="#333" Margin="0,0,0,10"/>
                            <TextBlock Text="Shift Name:" FontWeight="Bold"/>
                            <TextBlock x:Name="ShiftNameTextBlock" FontSize="14"/>

                            <TextBlock Text="Start Time:" FontWeight="Bold"/>
                            <TextBlock x:Name="ShiftStartTextBlock" FontSize="14"/>

                            <TextBlock Text="End Time:" FontWeight="Bold"/>
                            <TextBlock x:Name="ShiftEndTextBlock" FontSize="14"/>

                            <TextBlock Text="Days:" FontWeight="Bold"/>
                            <TextBlock x:Name="ShiftDaysTextBlock" FontSize="14"/>
                        </StackPanel>
                    </Grid>

                    <!-- Job Description (Full Width) -->
                    <TextBlock Text="Job Description"
                               FontSize="16" FontWeight="Bold"
                               Foreground="#333" Margin="0,10,0,10"/>
                    <StackPanel Margin="0,0,0,10">
                        <TextBlock Text="Position:" FontWeight="Bold"/>
                        <TextBlock x:Name="PositionTextBlock" FontSize="14"/>

                        <TextBlock Text="Department:" FontWeight="Bold"/>
                        <TextBlock x:Name="DepartmentTextBlock" FontSize="14"/>

                        <TextBlock Text="Base Salary:" FontWeight="Bold"/>
                        <TextBlock x:Name="SalaryTextBlock" FontSize="14"/>

                        <TextBlock Text="Hire Date:" FontWeight="Bold"/>
                        <TextBlock x:Name="HireDateTextBlock" FontSize="14"/>
                    </StackPanel>

                    <!-- Close Button -->
                    <Button Content="Close"
                            Width="100"
                            Height="35"
                            HorizontalAlignment="Center"
                            Background="#30ABA0"
                            Foreground="White"
                            BorderThickness="0"
                            Margin="0,20,0,0"
                            Click="Close_Click"/>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
