<UserControl x:Class="VeterinarianEMS.RolesControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VeterinarianEMS" 
             xmlns:controls="clr-namespace:VeterinarianEMS.Controls"  
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">

    <Grid Background="#F0F0F0" Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- ================= POSITION SECTION ================= -->
        <Grid Grid.Column="0" Margin="0,0,15,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Position" 
                           Grid.Column="0"
                           FontSize="28" 
                           FontWeight="Bold" 
                           VerticalAlignment="Center"
                           Foreground="Black"/>
                <Button Grid.Column="1"
                        Background="#30ABA0"
                        Foreground="White"
                        Padding="10,5"
                        FontWeight="SemiBold"
                        FontSize="14"
                        BorderThickness="0"
                        Click="AddPosition_Click">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="+" FontSize="16" FontWeight="Bold" Margin="0,0,5,0"/>
                        <TextBlock Text="Add Position"/>
                    </StackPanel>
                </Button>
            </Grid>

            <!-- DataGrid Container -->
            <Border Grid.Row="1" Background="White" BorderBrush="#CCC" BorderThickness="1" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Controls -->
                    <Grid Grid.Row="0" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- 🔎 Search (moved to the left) -->
                        <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Text="Search:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBox x:Name="PositionSearchBox"
                 Width="180"
                 Padding="3"
                 TextChanged="PositionSearchBox_TextChanged"/>
                        </StackPanel>

                        <!-- Entries per page (moved to the right) -->
                        <StackPanel Orientation="Horizontal" Grid.Column="2" VerticalAlignment="Center">
                            <TextBlock Text="Display" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <controls:EntriesPerPageSelector x:Name="PositionEntriesSelector" Width="80"/>
                            <TextBlock Text="record per page" VerticalAlignment="Center" Margin="5,0,0,0"/>
                        </StackPanel>
                    </Grid>

                    <!-- DataGrid -->
                    <DataGrid x:Name="PositionDataGrid"
                              Grid.Row="1"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              CanUserSortColumns="True"
                              HeadersVisibility="Column"
                              HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Auto"
                              BorderThickness="1"
                              BorderBrush="#CCC"
                              GridLinesVisibility="None"
                              Margin="0,0,0,10">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="*"/>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                            <DataGridTemplateColumn Header="Actions" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="-22,0,0,0">

                                            <!-- Edit Button -->
                                            <Button ToolTip="Edit" Margin="2" BorderThickness="0" Click="EditPosition_Click">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Background" Value="Transparent"/>
                                                        <Setter Property="Padding" Value="6"/>
                                                        <Setter Property="Cursor" Value="Hand"/>
                                                        <Setter Property="Foreground" Value="#50E3C2"/>
                                                        <!-- Green -->
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="Button">
                                                                    <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="4" 
                                    Padding="{TemplateBinding Padding}">
                                                                        <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#50E3C2"/>
                                                                <Setter Property="Foreground" Value="White"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                                <materialDesign:PackIcon Kind="Pencil" Width="16" Height="16"
                                 Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"/>
                                            </Button>

                                            <!-- Delete Button -->
                                            <Button ToolTip="Delete" Margin="2" BorderThickness="0" Click="DeletePosition_Click">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Background" Value="Transparent"/>
                                                        <Setter Property="Padding" Value="6"/>
                                                        <Setter Property="Cursor" Value="Hand"/>
                                                        <Setter Property="Foreground" Value="#E35050"/>
                                                        <!-- Red -->
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="Button">
                                                                    <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="4" 
                                    Padding="{TemplateBinding Padding}">
                                                                        <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#E35050"/>
                                                                <Setter Property="Foreground" Value="White"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                                <materialDesign:PackIcon Kind="Delete" Width="16" Height="16"
                                 Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"/>
                                            </Button>

                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Position Pagination -->
                    <Grid Grid.Row="2" Margin="0,5,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Left: Showing entries -->
                        <TextBlock x:Name="PositionShowingText"
               Grid.Column="0"
               Text="Showing 0 to 0 of 0 entries"
               VerticalAlignment="Center"
               Foreground="Gray"/>

                        <!-- Right: Pagination controls -->
                        <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Center" Margin="10">

                            <!-- Previous Button -->
                            <Button Content="Previous"
                Click="PositionPrev_Click"
                Background="Transparent"
                Foreground="#333"
                BorderThickness="1"
                Padding="5,2"
                Margin="5,0"/>

                            <!-- Current Page Number (highlighted) -->
                            <TextBlock x:Name="PositionPageNumber"
                   Text="1"
                   Background="#30ABA0"
                   Foreground="White"
                   FontWeight="Bold"
                   Padding="5,2"
                   Margin="5,0"
                   VerticalAlignment="Center"
                   TextAlignment="Center"/>

                            <!-- Next Button -->
                            <Button Content="Next"
                Click="PositionNext_Click"
                Background="Transparent"
                Foreground="#333"
                BorderThickness="1"
                Padding="5,2"
                Margin="5,0"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>
        </Grid>

        <!-- ================= DEPARTMENT SECTION ================= -->
        <Grid Grid.Column="1" Margin="15,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Department" 
                           Grid.Column="0"
                           FontSize="28" 
                           FontWeight="Bold" 
                           VerticalAlignment="Center"
                           Foreground="Black"/>
                <Button Grid.Column="1"
                        Background="#30ABA0"
                        Foreground="White"
                        Padding="10,5"
                        FontWeight="SemiBold"
                        FontSize="14"
                        BorderThickness="0"
                        Click="AddDepartment_Click">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="+" FontSize="16" FontWeight="Bold" Margin="0,0,5,0"/>
                        <TextBlock Text="Add Department"/>
                    </StackPanel>
                </Button>
            </Grid>

            <!-- DataGrid Container -->
            <Border Grid.Row="1" Background="White" BorderBrush="#CCC" BorderThickness="1" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Controls -->
                    <Grid Grid.Row="0" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- 🔎 Search (moved to the left) -->
                        <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Text="Search:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBox x:Name="DepartmentSearchBox"
                 Width="180"
                 Padding="3"
                 TextChanged="DepartmentSearchBox_TextChanged"/>
                        </StackPanel>

                        <!-- Entries per page (moved to the right) -->
                        <StackPanel Orientation="Horizontal" Grid.Column="2" VerticalAlignment="Center">
                            <TextBlock Text="Display" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <controls:EntriesPerPageSelector x:Name="DepartmentEntriesSelector" Width="80"/>
                            <TextBlock Text="record per page" VerticalAlignment="Center" Margin="5,0,0,0"/>
                        </StackPanel>
                    </Grid>


                    <!-- DataGrid -->
                    <DataGrid x:Name="DepartmentDataGrid"
                              Grid.Row="1"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              CanUserSortColumns="True"
                              HeadersVisibility="Column"
                              HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Auto"
                              BorderThickness="1"
                              BorderBrush="#CCC"
                              GridLinesVisibility="None"
                              Margin="0,0,0,10">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="*"/>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                            <DataGridTemplateColumn Header="Actions" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="-22,0,0,0">

                                            <!-- Edit Button -->
                                            <Button ToolTip="Edit" Margin="2" BorderThickness="0" Click="EditDepartment_Click">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Background" Value="Transparent"/>
                                                        <Setter Property="Padding" Value="6"/>
                                                        <Setter Property="Cursor" Value="Hand"/>
                                                        <Setter Property="Foreground" Value="#50E3C2"/>
                                                        <!-- Green -->
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="Button">
                                                                    <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="4" 
                                    Padding="{TemplateBinding Padding}">
                                                                        <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#50E3C2"/>
                                                                <Setter Property="Foreground" Value="White"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                                <materialDesign:PackIcon Kind="Pencil" Width="16" Height="16"
                                 Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"/>
                                            </Button>

                                            <!-- Delete Button -->
                                            <Button ToolTip="Delete" Margin="2" BorderThickness="0" Click="DeleteDepartment_Click">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Background" Value="Transparent"/>
                                                        <Setter Property="Padding" Value="6"/>
                                                        <Setter Property="Cursor" Value="Hand"/>
                                                        <Setter Property="Foreground" Value="#E35050"/>
                                                        <!-- Red -->
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="Button">
                                                                    <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="4" 
                                    Padding="{TemplateBinding Padding}">
                                                                        <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#E35050"/>
                                                                <Setter Property="Foreground" Value="White"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                                <materialDesign:PackIcon Kind="Delete" Width="16" Height="16"
                                 Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"/>
                                            </Button>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Department Pagination -->
                    <Grid Grid.Row="2" Margin="0,5,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Left: Showing entries -->
                        <TextBlock x:Name="DepartmentShowingText"
               Grid.Column="0"
               Text="Showing 0 to 0 of 0 entries"
               VerticalAlignment="Center"
               Foreground="Gray"/>

                        <!-- Right: Pagination controls -->
                        <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Center" Margin="10">

                            <!-- Previous Button -->
                            <Button Content="Previous"
                Click="DepartmentPrev_Click"
                Background="Transparent"
                Foreground="#333"
                BorderThickness="1"
                Padding="5,2"
                Margin="5,0"/>

                            <!-- Current Page Number (highlighted) -->
                            <TextBlock x:Name="DepartmentPageNumber"
                   Text="1"
                   Background="#30ABA0"
                   Foreground="White"
                   FontWeight="Bold"
                   Padding="5,2"
                   Margin="5,0"
                   VerticalAlignment="Center"
                   TextAlignment="Center"/>

                            <!-- Next Button -->
                            <Button Content="Next"
                Click="DepartmentNext_Click"
                Background="Transparent"
                Foreground="#333"
                BorderThickness="1"
                Padding="5,2"
                Margin="5,0"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
