<UserControl x:Class="VeterinarianEMS.RolesControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VeterinarianEMS" 
             xmlns:controls="clr-namespace:VeterinarianEMS.Controls"  
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">

    <Grid Background="#F0F0F0" Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Position Section -->
        <Grid Grid.Column="0" Margin="0,0,15,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Position" 
                           Grid.Column="0"
                           FontSize="28" 
                           FontWeight="Bold" 
                           VerticalAlignment="Center"
                           Foreground="Black"/>
                <Button Grid.Column="1"
                        Background="#30ABA0"
                        Foreground="White"
                        Padding="10,5"
                        FontWeight="SemiBold"
                        FontSize="14"
                        BorderThickness="0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="+" FontSize="16" FontWeight="Bold" Margin="0,0,5,0"/>
                        <TextBlock Text="Add Position"/>
                    </StackPanel>
                </Button>
            </Grid>

            <!-- DataGrid Container -->
            <Border Grid.Row="1" Background="White" BorderBrush="#CCC" BorderThickness="1" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Controls -->
                    <Grid Grid.Row="0" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Text="Show" VerticalAlignment="Center" Margin="0,0,5,0"/>

                            <controls:EntriesPerPageSelector x:Name="PositionEntriesSelector" Width="80"/>

                            <TextBlock Text="entries" VerticalAlignment="Center" Margin="5,0,0,0"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Grid.Column="2" VerticalAlignment="Center">
                            <TextBlock Text="Search:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBox Width="180" Padding="3"/>
                        </StackPanel>
                    </Grid>

                    <!-- DataGrid -->
                    <DataGrid Grid.Row="1"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              CanUserSortColumns="True"
                              HeadersVisibility="Column"
                              HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Auto"
                              BorderThickness="1"
                              BorderBrush="#CCC"
                              GridLinesVisibility="None"
                              Margin="0,0,0,10">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="Auto"/>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                            <DataGridTemplateColumn Header="Actions" Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="Edit" Background="#FFC107" Foreground="White" BorderThickness="0" Padding="5,2" Margin="2,0"/>
                                            <Button Content="Delete" Background="#E35050" Foreground="White" BorderThickness="0" Padding="5,2" Margin="2,0"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Pagination -->
                    <Grid Grid.Row="2" Margin="0,5,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Showing 1 to 1 of 1 entries" VerticalAlignment="Center" Foreground="Gray"/>
                        <StackPanel Orientation="Horizontal" Grid.Column="1">
                            <Button Content="Previous" Background="Transparent" Foreground="#333" BorderThickness="1" Padding="5,2" Margin="5,0"/>
                            <Button Content="1" Background="#30ABA0" Foreground="White" BorderThickness="0" Padding="5,2" Margin="5,0"/>
                            <Button Content="Next" Background="Transparent" Foreground="#333" BorderThickness="1" Padding="5,2" Margin="5,0"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>
        </Grid>

        <!-- Department Section -->
        <Grid Grid.Column="1" Margin="15,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Department" 
                           Grid.Column="0"
                           FontSize="28" 
                           FontWeight="Bold" 
                           VerticalAlignment="Center"
                           Foreground="Black"/>
                <Button Grid.Column="1"
                        Background="#30ABA0"
                        Foreground="White"
                        Padding="10,5"
                        FontWeight="SemiBold"
                        FontSize="14"
                        BorderThickness="0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="+" FontSize="16" FontWeight="Bold" Margin="0,0,5,0"/>
                        <TextBlock Text="Add Department"/>
                    </StackPanel>
                </Button>
            </Grid>

            <!-- DataGrid Container -->
            <Border Grid.Row="1" Background="White" BorderBrush="#CCC" BorderThickness="1" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Controls -->
                    <Grid Grid.Row="0" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Text="Show" VerticalAlignment="Center" Margin="0,0,5,0"/>

                            <controls:EntriesPerPageSelector x:Name="DepartmentEntriesSelector" Width="80"/>

                            <TextBlock Text="entries" VerticalAlignment="Center" Margin="5,0,0,0"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Grid.Column="2" VerticalAlignment="Center">
                            <TextBlock Text="Search:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBox Width="180" Padding="3"/>
                        </StackPanel>
                    </Grid>

                    <!-- DataGrid -->
                    <DataGrid Grid.Row="1"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              CanUserSortColumns="True"
                              HeadersVisibility="Column"
                              HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Auto"
                              BorderThickness="1"
                              BorderBrush="#CCC"
                              GridLinesVisibility="None"
                              Margin="0,0,0,10">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="Auto"/>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                            <DataGridTemplateColumn Header="Actions" Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="Edit" Background="#FFC107" Foreground="White" BorderThickness="0" Padding="5,2" Margin="2,0"/>
                                            <Button Content="Delete" Background="#E35050" Foreground="White" BorderThickness="0" Padding="5,2" Margin="2,0"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Pagination -->
                    <Grid Grid.Row="2" Margin="0,5,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Showing 1 to 1 of 1 entries" VerticalAlignment="Center" Foreground="Gray"/>
                        <StackPanel Orientation="Horizontal" Grid.Column="1">
                            <Button Content="Previous" Background="Transparent" Foreground="#333" BorderThickness="1" Padding="5,2" Margin="5,0"/>
                            <Button Content="1" Background="#30ABA0" Foreground="White" BorderThickness="0" Padding="5,2" Margin="5,0"/>
                            <Button Content="Next" Background="Transparent" Foreground="#333" BorderThickness="1" Padding="5,2" Margin="5,0"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
