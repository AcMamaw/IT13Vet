<UserControl x:Class="VeterinarianEMS.EmployeeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VeterinarianEMS"
             xmlns:controls="clr-namespace:VeterinarianEMS.Controls"  
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">

    <!-- Root Grid -->
    <Grid x:Name="RootGrid" Background="#F0F0F0" Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Employees" 
                       Grid.Column="0"
                       FontSize="28" 
                       FontWeight="Bold" 
                       VerticalAlignment="Center"
                       Foreground="Black"/>

            <Button Grid.Column="1"
                    Background="#30ABA0"
                    Foreground="White"
                    Padding="10,5"
                    BorderThickness="0"
                    Click="AddEmployeeButton_Click">
                <Border CornerRadius="8" Background="#30ABA0">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Plus" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBlock Text="Add Employee" Foreground="White"/>
                    </StackPanel>
                </Border>
            </Button>
        </Grid>

        <!-- Main Content -->
        <Border Grid.Row="1" Grid.RowSpan="2"
                Background="White"
                CornerRadius="8"
                Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Top Controls -->
                <Grid Grid.Row="0" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- 🔎 Search now on the left -->
                    <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center">
                        <TextBlock Text="Search:" VerticalAlignment="Center" Margin="0,0,5,0" Foreground="Black"/>
                        <TextBox Width="200" x:Name="SearchTextBox" 
                 TextChanged="SearchTextBox_TextChanged"/>
                    </StackPanel>

                    <!-- 📋 Show entries now on the right -->
                    <StackPanel Orientation="Horizontal" Grid.Column="2" VerticalAlignment="Center">
                        <TextBlock Text="Display" VerticalAlignment="Center" Margin="0,0,5,0" Foreground="Black"/>
                        <controls:EntriesPerPageSelector x:Name="EntriesSelector" Width="80"/>
                        <TextBlock Text="records per page" VerticalAlignment="Center" Margin="5,0,0,0" Foreground="Black"/>
                    </StackPanel>
                </Grid>


                <!-- DataGrid -->
                <DataGrid Grid.Row="1"
                          x:Name="EmployeeDataGrid"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          CanUserSortColumns="True"
                          HeadersVisibility="Column"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto"
                          BorderThickness="0"
                          GridLinesVisibility="None"
                              Margin="0,0,0,10" SelectionChanged="EmployeeDataGrid_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="*"/>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="2*"/>
                        <DataGridTextColumn Header="Department/Position" Binding="{Binding Department}" Width="4*"/>
                        <DataGridTextColumn Header="Shift" Binding="{Binding Shift}" Width="2*"/>
                        <DataGridTextColumn Header="Sex" Binding="{Binding Sex}" Width="1*"/>
                        <DataGridTextColumn Header="Age" Binding="{Binding Age}" Width="1*"/>
                        <DataGridTemplateColumn Header="Actions" Width="Auto" MinWidth="140">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="-50,0,0,0">

                                        <!-- View Button -->
                                        <Button ToolTip="View" Margin="2" BorderThickness="0" Click="ViewButton_Click">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Background" Value="Transparent"/>
                                                    <Setter Property="Padding" Value="6"/>
                                                    <Setter Property="Cursor" Value="Hand"/>
                                                    <Setter Property="Foreground" Value="#4A90E2"/>
                                                    <!-- blue -->
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border Background="{TemplateBinding Background}"
                                                CornerRadius="4"
                                                Padding="{TemplateBinding Padding}">
                                                                    <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"
                                                              RecognizesAccessKey="True"/>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#4A90E2"/>
                                                            <Setter Property="Foreground" Value="White"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>

                                            <!-- PackIcon inherits color by binding to the Button's Foreground -->
                                            <materialDesign:PackIcon Kind="Eye"
                                             Width="16" Height="16"
                                             Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"/>
                                        </Button>

                                        <!-- Edit Button -->
                                        <Button ToolTip="Edit" Margin="2" BorderThickness="0" Click="EditButton_Click">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Background" Value="Transparent"/>
                                                    <Setter Property="Padding" Value="6"/>
                                                    <Setter Property="Cursor" Value="Hand"/>
                                                    <Setter Property="Foreground" Value="#50E3C2"/>
                                                    <!-- green -->
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border Background="{TemplateBinding Background}"
                                                CornerRadius="4"
                                                Padding="{TemplateBinding Padding}">
                                                                    <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"
                                                              RecognizesAccessKey="True"/>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#50E3C2"/>
                                                            <Setter Property="Foreground" Value="White"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                            <materialDesign:PackIcon Kind="Pencil"
                                             Width="16" Height="16"
                                             Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"/>
                                        </Button>

                                        <!-- Delete Button -->
                                        <Button ToolTip="Delete" Margin="2" BorderThickness="0" Click="DeleteButton_Click">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Background" Value="Transparent"/>
                                                    <Setter Property="Padding" Value="6"/>
                                                    <Setter Property="Cursor" Value="Hand"/>
                                                    <Setter Property="Foreground" Value="#E35050"/>
                                                    <!-- red -->
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border Background="{TemplateBinding Background}"
                                                CornerRadius="4"
                                                Padding="{TemplateBinding Padding}">
                                                                    <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"
                                                              RecognizesAccessKey="True"/>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#E35050"/>
                                                            <Setter Property="Foreground" Value="White"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                            <materialDesign:PackIcon Kind="Delete"
                                             Width="16" Height="16"
                                             Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"/>
                                        </Button>

                                        <!-- Shift Button -->
                                        <Button ToolTip="Shift" Margin="2" BorderThickness="0" Click="ShiftButton_Click">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Background" Value="Transparent"/>
                                                    <Setter Property="Padding" Value="6"/>
                                                    <Setter Property="Cursor" Value="Hand"/>
                                                    <Setter Property="Foreground" Value="#9B59B6"/>
                                                    <!-- purple -->
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border Background="{TemplateBinding Background}"
                                                CornerRadius="4"
                                                Padding="{TemplateBinding Padding}">
                                                                    <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"
                                                              RecognizesAccessKey="True"/>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#9B59B6"/>
                                                            <Setter Property="Foreground" Value="White"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                            <materialDesign:PackIcon Kind="SwapHorizontal"
                                             Width="16" Height="16"
                                             Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"/>
                                        </Button>

                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Pagination -->
                <Grid Grid.Row="2" Margin="0,15,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left side: showing entries info -->
                    <TextBlock Grid.Column="0"
               x:Name="EntriesInfoTextBlock"
               Text="Showing 0 to 0 of 0 entries"
               VerticalAlignment="Center"
               Foreground="Gray"
               Margin="5,0"/>

                    <!-- Right side: pagination controls -->
                    <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Center" Margin="10">

                        <!-- Previous Button -->
                        <Button Content="Previous"
                Click="PreviousPageButton_Click"
                Background="Transparent"
                Foreground="#333"
                BorderThickness="1"
                Padding="5,2"
                Margin="5,0"/>

                        <!-- Current Page Number -->
                        <TextBlock x:Name="PageInfoTextBlock"
                   Text="1"
                   Background="#30ABA0"
                   Foreground="White"
                   FontWeight="Bold"
                   Padding="5,2"
                   Margin="5,0"
                   VerticalAlignment="Center"
                   TextAlignment="Center"/>

                        <!-- Next Button -->
                        <Button Content="Next"
                Click="NextPageButton_Click"
                Background="Transparent"
                Foreground="#333"
                BorderThickness="1"
                Padding="5,2"
                Margin="5,0"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>

