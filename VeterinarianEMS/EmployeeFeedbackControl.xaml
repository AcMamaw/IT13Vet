<UserControl x:Class="VeterinarianEMS.EmployeeFeedbackControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:VeterinarianEMS.Controls"  
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:VeterinarianEMS"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">

    <Grid Background="#F0F0F0" Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- Feedback Entry -->
            <RowDefinition Height="Auto"/>
            <!-- Search + Entries per page -->
            <RowDefinition Height="*"/>
            <!-- DataGrid -->
            <RowDefinition Height="Auto"/>
            <!-- Pagination Footer -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="Employee Feedback"
                   FontSize="28"
                   FontWeight="Bold"
                   Margin="0,0,0,20"
                   Foreground="Black"/>

        <!-- Feedback Entry Section -->
        <Border Grid.Row="1" 
                 Background="White" 
                 BorderBrush="#CCC" 
                 CornerRadius="8"
                 BorderThickness="1" 
                 Padding="10">
            <StackPanel>
                <TextBlock Text="Your Feedback:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="FeedbackTextBox" Height="80" TextWrapping="Wrap" AcceptsReturn="True"/>

                <TextBlock Text="Feedback Type:" FontWeight="Bold" Margin="0,10,0,5"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <RadioButton x:Name="PositiveRadio" Content="Positive" GroupName="FeedbackType" Margin="0,0,10,0" Foreground="#4CAF50" FontWeight="Bold"/>
                    <RadioButton x:Name="NeutralRadio" Content="Neutral" GroupName="FeedbackType" Margin="0,0,10,0" Foreground="#FFC107" FontWeight="Bold"/>
                    <RadioButton x:Name="NegativeRadio" Content="Negative" GroupName="FeedbackType" Foreground="#F44336" FontWeight="Bold"/>
                </StackPanel>

                <Button Content="Submit Feedback" Width="150" HorizontalAlignment="Left" Background="#30ABA0" Foreground="White" Padding="10" Click="SubmitFeedback_Click" Height="37"/>
            </StackPanel>
        </Border>

        <!-- Search + Entries per page Row -->
        <Grid Grid.Row="2" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <!-- Search -->
                <ColumnDefinition Width="Auto"/>
                <!-- Entries per page -->
            </Grid.ColumnDefinitions>

            <!-- Search Box (Left) -->
            <StackPanel Orientation="Horizontal" Grid.Column="0">
                <TextBlock Text="Search: " VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox x:Name="SearchBox" Width="200" TextChanged="SearchBox_TextChanged"/>
            </StackPanel>

            <!-- 📋 Show entries now on the right -->
            <StackPanel Orientation="Horizontal" Grid.Column="2" VerticalAlignment="Center">
                <TextBlock Text="Display" VerticalAlignment="Center" Margin="0,0,5,0" Foreground="Black"/>
                <controls:EntriesPerPageSelector x:Name="EntriesSelector" Width="80"/>
                <TextBlock Text="records per page" VerticalAlignment="Center" Margin="5,0,0,0" Foreground="Black"/>
            </StackPanel>
        </Grid>

        <!-- Feedback DataGrid -->
        <DataGrid x:Name="FeedbackDataGrid" Grid.Row="3" AutoGenerateColumns="False" IsReadOnly="True"
                  CanUserSortColumns="True" HeadersVisibility="Column"
                  HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"
                  GridLinesVisibility="None" BorderThickness="1" BorderBrush="#CCC" Background="White">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding FeedbackID}" Width="Auto"/>
                <DataGridTextColumn Header="Employee" Binding="{Binding EmployeeName}" Width="*"/>
                <DataGridTextColumn Header="Date" Binding="{Binding Date}" Width="*"/>
                <DataGridTextColumn Header="Feedback" Binding="{Binding Comment}" Width="2*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                            <Setter Property="VerticalAlignment" Value="Top"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Type" Binding="{Binding FeedbackType}" Width="*"/>
                <DataGridTextColumn Header="Reviewed" Binding="{Binding Reviewed}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Pagination Footer -->
        <Grid Grid.Row="4" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Left side: showing entries info -->
            <TextBlock Grid.Column="0"
               x:Name="ShowingText"
               Text="Showing 0 to 0 of 0 entries"
               VerticalAlignment="Center"
               Foreground="Gray"
               Margin="5,0"/>

            <!-- Right side: pagination controls -->
            <StackPanel Orientation="Horizontal"
                Grid.Column="1"
                HorizontalAlignment="Center"
                Margin="10">
                <!-- Previous Button -->
                <Button Content="Previous"
                Click="PreviousPage_Click"
                Background="Transparent"
                Foreground="#333"
                BorderThickness="1"
                Padding="5,2"
                Margin="5,0"/>

                <!-- Current Page Number -->
                <TextBlock x:Name="PageInfoTextBlock"
                   Text="1"
                   Background="#30ABA0"
                   Foreground="White"
                   FontWeight="Bold"
                   Padding="5,2"
                   Margin="5,0"
                   VerticalAlignment="Center"
                   TextAlignment="Center"/>

                <!-- Next Button -->
                <Button Content="Next"
                Click="NextPage_Click"
                Background="Transparent"
                Foreground="#333"
                BorderThickness="1"
                Padding="5,2"
                Margin="5,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
