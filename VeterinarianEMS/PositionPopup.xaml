<UserControl x:Class="VeterinarianEMS.Controls.PositionPopup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="220" Width="350">

    <Border Background="White"
            CornerRadius="8"
            Padding="20"
            BorderBrush="#CCC"
            BorderThickness="1"
            SnapsToDevicePixels="True">

        <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Input -->
            <StackPanel Grid.Row="0" Margin="0,0,0,20" HorizontalAlignment="Center">
                <!-- 🔹 Dynamic label (set from code-behind: TitleLabel property) -->
                <TextBlock x:Name="LabelBlock"
                           Text="Position Name:" 
                           FontWeight="Bold" 
                           Margin="0,0,0,8" 
                           HorizontalAlignment="Center"/>

                <!-- 🔹 Textbox input (used for both Position & Department) -->
                <TextBox x:Name="PositionNameTextBox"
                         Width="260"
                         Height="40"
                         VerticalContentAlignment="Center"
                         Padding="8"
                         FontSize="14"/>
            </StackPanel>

            <!-- Buttons -->
            <StackPanel Grid.Row="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center">

                <Button Content="Save"
                        Width="90"
                        Height="35"
                        Margin="0,0,10,0"
                        Background="#30ABA0"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="10,2"
                        FontSize="14"
                        Click="Save_Click"/>

                <Button Content="Cancel"
                        Width="90"
                        Height="35"
                        Background="Transparent"
                        Foreground="#333"
                        BorderBrush="#CCC"
                        BorderThickness="1"
                        Padding="10,2"
                        FontSize="14"
                        Click="Cancel_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
