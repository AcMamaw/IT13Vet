<UserControl x:Class="VeterinarianEMS.FeedbackControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:VeterinarianEMS.Controls"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="900">

    <Grid Background="#F0F0F0" Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <TextBlock Grid.Row="0"
                   Text="Feedback"
                   FontSize="28"
                   FontWeight="Bold"
                   Margin="0,0,0,20"
                   Foreground="Black"/>

        <!-- MAIN CONTAINER -->
        <Border Grid.Row="1"
                Background="White"
                Padding="20"
                BorderBrush="#CCC"
                BorderThickness="1">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- CATEGORY BUTTONS -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                    <Button x:Name="PositiveButton" Click="PositiveButton_Click"
                            Background="White" BorderBrush="#CCC" BorderThickness="1" Padding="10,5" Margin="0,0,10,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Positive" FontWeight="Bold" Margin="0,0,5,0" VerticalAlignment="Center"/>
                            <Border Background="#4CAF50" Width="20" Height="20" CornerRadius="10">
                                <TextBlock x:Name="PositiveCount" Text="0" Foreground="White"
                                           HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
                            </Border>
                        </StackPanel>
                    </Button>

                    <Button x:Name="NeutralButton" Click="NeutralButton_Click"
                            Background="White" BorderBrush="#CCC" BorderThickness="1" Padding="10,5" Margin="0,0,10,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Neutral" FontWeight="Bold" Margin="0,0,5,0" VerticalAlignment="Center"/>
                            <Border Background="#FFC107" Width="20" Height="20" CornerRadius="10">
                                <TextBlock x:Name="NeutralCount" Text="0" Foreground="White"
                                           HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
                            </Border>
                        </StackPanel>
                    </Button>

                    <Button x:Name="NegativeButton" Click="NegativeButton_Click"
                            Background="White" BorderBrush="#CCC" BorderThickness="1" Padding="10,5">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Negative" FontWeight="Bold" Margin="0,0,5,0" VerticalAlignment="Center"/>
                            <Border Background="#F44336" Width="20" Height="20" CornerRadius="10">
                                <TextBlock x:Name="NegativeCount" Text="0" Foreground="White"
                                           HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
                            </Border>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- SEARCH & ENTRIES -->
                <Grid Grid.Row="1" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal" Grid.Column="0">
                        <TextBlock Text="Search:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBox x:Name="SearchBox" Width="200" TextChanged="SearchBox_TextChanged"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="Display" VerticalAlignment="Center" Margin="0,0,5,0" Foreground="Black"/>
                        <controls:EntriesPerPageSelector x:Name="EntriesSelector" Width="80"/>
                        <TextBlock Text="records per page" VerticalAlignment="Center" Margin="5,0,0,0" Foreground="Black"/>
                    </StackPanel>
                </Grid>

                <!-- ✅ SCROLLVIEWER TO AVOID INFINITY BUG -->
                <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                    <DataGrid x:Name="FeedbackDataGrid"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              HeadersVisibility="Column"
                              BorderBrush="#CCC"
                              BorderThickness="1"
                              GridLinesVisibility="None"
                              HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Auto"
                              MinHeight="200"
                              MaxHeight="400">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding FeedbackID}" Width="*"/>
                            <DataGridTextColumn Header="Employee" Binding="{Binding EmployeeName}" Width="3*"/>
                            <DataGridTextColumn Header="Date" Binding="{Binding Date, StringFormat=d}" Width="2*"/>
                            <DataGridTextColumn Header="Feedback" Binding="{Binding Comment}" Width="4*">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextWrapping" Value="Wrap"/>
                                        <Setter Property="VerticalAlignment" Value="Top"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Reviewed" Binding="{Binding Reviewed}" Width="2*"/>

                            <!-- ACTION BUTTONS -->
                            <DataGridTemplateColumn Header="Actions" Width="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="-42,0,0,0">

                                            <!-- ✅ MARK AS REVIEWED -->
                                            <Button ToolTip="Mark as Reviewed"
                                                    Margin="2" BorderThickness="0"
                                                    Click="MarkReviewed_Click">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Background" Value="Transparent"/>
                                                        <Setter Property="Padding" Value="6"/>
                                                        <Setter Property="Cursor" Value="Hand"/>
                                                        <Setter Property="Foreground" Value="#4CAF50"/>
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="Button">
                                                                    <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#4CAF50"/>
                                                                <Setter Property="Foreground" Value="White"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                                <materialDesign:PackIcon Kind="CheckCircle" Width="16" Height="16"
                                                                         Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"/>
                                            </Button>

                                            <!-- 🗑️ DELETE -->
                                            <Button ToolTip="Delete" Margin="2" BorderThickness="0" Click="DeleteFeedback_Click">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Background" Value="Transparent"/>
                                                        <Setter Property="Padding" Value="6"/>
                                                        <Setter Property="Cursor" Value="Hand"/>
                                                        <Setter Property="Foreground" Value="#E35050"/>
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="Button">
                                                                    <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#E35050"/>
                                                                <Setter Property="Foreground" Value="White"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                                <materialDesign:PackIcon Kind="Delete" Width="16" Height="16"
                                                                         Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"/>
                                            </Button>

                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </ScrollViewer>

                <!-- PAGINATION -->
                <Grid Grid.Row="3" Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock x:Name="ShowingText"
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               Foreground="Gray"
                               Margin="5,0"
                               Text="Showing 0 to 0 of 0 entries"/>

                    <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Center" Margin="10">
                        <Button Content="Previous" Click="PreviousPage_Click"
                                Background="Transparent" Foreground="#333"
                                BorderThickness="1" Padding="5,2" Margin="5,0"/>
                        <TextBlock x:Name="PageInfoTextBlock"
                                   Text="1" Background="#30ABA0"
                                   Foreground="White" FontWeight="Bold"
                                   Padding="5,2" Margin="5,0"
                                   VerticalAlignment="Center"/>
                        <Button Content="Next" Click="NextPage_Click"
                                Background="Transparent" Foreground="#333"
                                BorderThickness="1" Padding="5,2" Margin="5,0"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
