<UserControl x:Class="VeterinarianEMS.PayrollControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VeterinarianEMS"
             xmlns:controls="clr-namespace:VeterinarianEMS.Controls"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="1000">

    <Grid Background="#F0F0F0" Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 🧾 Title -->
        <TextBlock Grid.Row="0"
                   Text="Payroll"
                   FontSize="28"
                   FontWeight="Bold"
                   Margin="0,0,0,20"
                   Foreground="Black"/>

        <Border Grid.Row="1"
                Background="White"
                BorderBrush="#CCC"
                BorderThickness="1"
                Padding="15"
                CornerRadius="6">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 🧮 Top Buttons -->
                <Grid Grid.Row="0" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <Button Content="Print" Background="White" BorderBrush="LightGray" BorderThickness="1" Padding="8,4" Click="PrintButton_Click"/>
                    </StackPanel>

                    <Button Grid.Column="1"
                        Background="#30ABA0"
                        Foreground="White"
                        Padding="10,5"
                        BorderThickness="0"
                        FontWeight="SemiBold"
                        Content="Generate Payroll"
                        Click="GeneratePayroll_Click"/>
                </Grid>

                <!-- 🔎 Filters -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,15">
                    <ComboBox x:Name="EmployeeComboBox"
                      Width="180"
                      Height="35"
                      Background="White"
                      Foreground="Black"
                      IsEditable="True"
                      IsTextSearchEnabled="False"
                      StaysOpenOnEdit="True"
                      Text="Search Employee"
                      GotFocus="EmployeeComboBox_GotFocus"
                      LostFocus="EmployeeComboBox_LostFocus"
                      KeyUp="EmployeeComboBox_KeyUp"
                      SelectionChanged="EmployeeComboBox_SelectionChanged"/>


                <controls:DateRangePicker x:Name="MyDateRange"
                                              Margin="15,0,20,0"
                                              Height="45"/>
                </StackPanel>

                <!-- 📊 Payroll Table -->
                <Grid Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Search / Show -->
                    <Grid Grid.Row="0" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Search -->
                        <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Text="Search:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBox x:Name="SearchBox" Width="200" Padding="3" TextChanged="SearchBox_TextChanged"/>
                        </StackPanel>

                        <!-- Show entries -->
                        <StackPanel Orientation="Horizontal" Grid.Column="2" VerticalAlignment="Center">
                            <TextBlock Text="Display" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <controls:EntriesPerPageSelector 
                                x:Name="EntriesSelector" 
                                Width="80"
                                EntriesChanged="EntriesSelector_EntriesChanged"/>                   
                            <TextBlock Text="record per page" VerticalAlignment="Center" Margin="5,0,0,0"/> 
                        </StackPanel>
                    </Grid>

                    <!-- Payroll DataGrid -->
                    <DataGrid x:Name="PayrollDataGrid"
          Grid.Row="1"
          AutoGenerateColumns="False"
          IsReadOnly="True"
          CanUserSortColumns="True"
          HeadersVisibility="Column"
          HorizontalScrollBarVisibility="Auto"
          VerticalScrollBarVisibility="Auto"
          BorderThickness="0"
          GridLinesVisibility="None"
          Margin="20,0,20,10"
          RowHeight="45"
          AlternatingRowBackground="#FAFAFA"
          Background="White"
          BorderBrush="#E0E0E0"
          CanUserResizeRows="False">

                        <DataGrid.Resources>
                            <!-- Center alignment style for cell values -->
                            <Style x:Key="CenterCellStyle" TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="TextAlignment" Value="Center"/>
                                <Setter Property="FontSize" Value="14"/>
                                <Setter Property="Foreground" Value="#333"/>
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="0"/>
                            </Style>

                            <!-- Header style -->
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                <Setter Property="VerticalContentAlignment" Value="Center"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="FontSize" Value="14"/>
                                <Setter Property="Background" Value="#F5F5F5"/>
                                <Setter Property="Foreground" Value="#444"/>
                                <Setter Property="Height" Value="45"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                <Setter Property="BorderBrush" Value="#E0E0E0"/>
                                <Setter Property="Padding" Value="5,0,5,0"/>
                            </Style>

                            <!-- Row hover effect -->
                            <Style TargetType="DataGridRow">
                                <Setter Property="Background" Value="White"/>
                                <Setter Property="BorderBrush" Value="#E0E0E0"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                <Setter Property="SnapsToDevicePixels" Value="True"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#E3F2FD"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.Resources>

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding PayrollID}" Width="70"
            ElementStyle="{StaticResource CenterCellStyle}"/>
                            <DataGridTextColumn Header="Employee" Binding="{Binding EmployeeName}" Width="1.4*"
            ElementStyle="{StaticResource CenterCellStyle}"/>
                            <DataGridTextColumn Header="Period Start" Binding="{Binding PayPeriodStart}" Width="1.9*"
            ElementStyle="{StaticResource CenterCellStyle}"/>
                            <DataGridTextColumn Header="Period End" Binding="{Binding PayPeriodEnd}" Width="1.9*"
            ElementStyle="{StaticResource CenterCellStyle}"/>
                            <DataGridTextColumn Header="TotalHours" Binding="{Binding TotalHoursWorked}" Width="79"
            ElementStyle="{StaticResource CenterCellStyle}"/>
                            <DataGridTextColumn Header="LeaveDays" Binding="{Binding LeaveDays}" Width="78"
            ElementStyle="{StaticResource CenterCellStyle}"/>
                            <DataGridTextColumn Header="Salary" Binding="{Binding ComputedSalary, StringFormat=₱{0:N2}}" Width="1.1*"
            ElementStyle="{StaticResource CenterCellStyle}"/>
                            <DataGridTextColumn Header="Export Date" Binding="{Binding ExportDate}" Width="2*"
            ElementStyle="{StaticResource CenterCellStyle}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>

                <Grid Grid.Row="3" Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left: Showing X to Y of Z entries -->
                    <TextBlock x:Name="PaginationStatus"
               Grid.Column="0"
               Text="Showing 1 to 1 of 0 entries"
               VerticalAlignment="Center"
               Foreground="Gray"
               Margin="5,0"/>

                    <!-- Right: Previous / Current Page / Next -->
                    <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Center">
                        <Button x:Name="PreviousButton"
                Content="Previous"
                Click="PreviousPageButton_Click"
                Background="Transparent" Foreground="#333"
                BorderThickness="1" Padding="5,2" Margin="5,0"/>

                        <TextBlock x:Name="CurrentPageTextBlock"
                   Text="1"
                   Background="#30ABA0"
                   Foreground="White"
                   FontWeight="Bold"
                   VerticalAlignment="Center"
                   TextAlignment="Center"
                   Padding="5,2"
                   Margin="5,0"/>

                        <Button x:Name="NextButton"
                Content="Next"
                Click="NextPageButton_Click"
                Background="Transparent" Foreground="#333"
                BorderThickness="1" Padding="5,2" Margin="5,0"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
