<UserControl x:Class="VeterinarianEMS.PayrollControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VeterinarianEMS"
             xmlns:controls="clr-namespace:VeterinarianEMS.Controls"  
    mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">

    <Grid Background="#F0F0F0" Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Payroll"
                   FontSize="28"
                   FontWeight="Bold"
                   Margin="0,0,0,20"
                   Foreground="Black"/>

        <Border Grid.Row="1"
                Background="White"
                BorderBrush="#CCC"
                BorderThickness="1"
                Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Top Buttons -->
                <Grid Grid.Row="0" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <Button Background="White" BorderBrush="LightGray" BorderThickness="1" Padding="5,2" Margin="0,0,5,0">
                            <TextBlock Text="Excel" Foreground="Black"/>
                        </Button>
                        <Button Background="White" BorderBrush="LightGray" BorderThickness="1" Padding="5,2" Margin="0,0,5,0">
                            <TextBlock Text="PDF" Foreground="Black"/>
                        </Button>
                        <Button Background="White" BorderBrush="LightGray" BorderThickness="1" Padding="5,2">
                            <TextBlock Text="Print" Foreground="Black"/>
                        </Button>
                    </StackPanel>

                    <Button Grid.Column="1" Background="#30ABA0" Foreground="White" Padding="10,5" BorderThickness="0">
                        Generate
                    </Button>
                </Grid>

                <!-- Filters -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,15">
                    <ComboBox x:Name="EmployeeComboBox"
          Width="159"
          SelectedIndex="0"
          Height="35"
          Background="White"
          Foreground="Black"
          SelectionChanged="EmployeeComboBox_SelectionChanged">

                        <!-- Style for all ComboBox Items -->
                        <ComboBox.ItemContainerStyle>
                            <Style TargetType="ComboBoxItem">
                                <!-- Set the background for normal, hovered, and selected states -->
                                <Setter Property="Background" Value="White"/>
                                <Setter Property="Foreground" Value="Black"/>
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                <Setter Property="Padding" Value="4"/>
                                <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="LightGray"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="LightBlue"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ComboBox.ItemContainerStyle>

                        <!-- Dropdown values -->
                        <ComboBoxItem Content="All Employees"/>
                        <ComboBoxItem Content="Employee 1"/>
                        <ComboBoxItem Content="Employee 2"/>
                        <ComboBoxItem Content="Employee 3"/>
                    </ComboBox>


                    <!-- Your custom date range picker -->
                    <controls:DateRangePicker x:Name="MyDateRange" Margin="0,0,20,0" Height="49"/>
                </StackPanel>

                <!-- DataGrid -->
                <Grid Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Show/Search -->
                    <Grid Grid.Row="0" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Text="Show" VerticalAlignment="Center" Margin="0,0,5,0"/>

                            <controls:EntriesPerPageSelector x:Name="EntriesSelector" Width="80"/>

                            <TextBlock Text="entries" VerticalAlignment="Center" Margin="5,0,0,0"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Grid.Column="2" VerticalAlignment="Center">
                            <TextBlock Text="Search:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBox Width="200" Padding="3"/>
                        </StackPanel>
                    </Grid>

                    <DataGrid Grid.Row="1"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              CanUserSortColumns="True"
                              HeadersVisibility="Column"
                              HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Auto"
                              BorderThickness="1"
                              BorderBrush="#CCC"
                              GridLinesVisibility="None"
                              Margin="0,0,0,10">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Emp ID" Binding="{Binding EmployeeId}" Width="Auto"/>
                            <DataGridTextColumn Header="Employee Name" Binding="{Binding EmployeeName}" Width="*"/>
                            <DataGridTextColumn Header="Period Start" Binding="{Binding PeriodStart}" Width="*"/>
                            <DataGridTextColumn Header="Period End" Binding="{Binding PeriodEnd}" Width="*"/>
                            <DataGridTextColumn Header="Base Salary" Binding="{Binding BaseSalary}" Width="*"/>
                            <DataGridTextColumn Header="Days Worked" Binding="{Binding DaysWorked}" Width="*"/>
                            <DataGridTextColumn Header="Overtime Hours" Binding="{Binding OvertimeHours}" Width="*"/>
                            <DataGridTextColumn Header="Leave Days" Binding="{Binding LeaveDays}" Width="*"/>
                            <DataGridTextColumn Header="Absent Days" Binding="{Binding AbsentDays}" Width="*"/>
                            <DataGridTextColumn Header="Late Minutes" Binding="{Binding LateMinutes}" Width="*"/>
                            <DataGridTextColumn Header="Gross Pay" Binding="{Binding GrossPay}" Width="*"/>
                            <DataGridTextColumn Header="Net Pay" Binding="{Binding NetPay}" Width="*"/>
                            <DataGridTextColumn Header="Export Date" Binding="{Binding ExportDate}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
                <!-- Pagination -->
                <Grid Grid.Row="3" Margin="0,15,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Entry info -->
                    <TextBlock Grid.Column="0" 
               Text="Showing 1 to 1 of 1 entries" 
               VerticalAlignment="Center" 
               Foreground="Gray"/>

                    <!-- Pagination buttons -->
                    <StackPanel Orientation="Horizontal" Grid.Column="1">
                        <Button Content="Previous" 
                Background="Transparent" 
                Foreground="#333" 
                BorderThickness="1" 
                Padding="5,2" 
                Margin="5,0"/>
                        <Button Content="1" 
                Background="#30ABA0" 
                Foreground="White" 
                BorderThickness="0" 
                Padding="5,2" 
                Margin="5,0"/>
                        <Button Content="Next" 
                Background="Transparent" 
                Foreground="#333" 
                BorderThickness="1" 
                Padding="5,2" 
                Margin="5,0"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
