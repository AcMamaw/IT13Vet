<Window x:Class="VeterinarianEMS.Views.LoginRegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="500" Width="700"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        WindowStyle="None"
        ShowInTaskbar="True">

    <Grid>
        <!-- Outer Card -->
        <Border Background="White" CornerRadius="20"
                VerticalAlignment="Center" HorizontalAlignment="Center"
                Padding="0" Width="680" Height="480">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
            </Border.Effect>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- LEFT PANEL (Login Form) -->
                <Grid Grid.Column="0" Background="White">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">

                        <!-- Logo -->
                        <Image Source="Assets/logo.png" Width="80" Height="80" Margin="0,0,0,20" HorizontalAlignment="Center"/>
                        <TextBlock Text="Sign in to VEMS" FontSize="24" FontWeight="Bold" Foreground="#333" Margin="0,0,0,20" HorizontalAlignment="Center"/>

                        <!-- Username -->
                        <TextBlock Text="Username" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <Border Background="#F0F0F0" CornerRadius="10" Margin="0,0,0,10">
                            <TextBox x:Name="txtLoginUsername"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Padding="10"
                                 Height="40"
                                 FontSize="14"/>
                        </Border>

                        <!-- Password -->
                        <TextBlock Text="Password" FontWeight="SemiBold" Margin="0,10,0,5"/>
                        <Border Background="#F0F0F0" CornerRadius="10" Margin="0,0,0,10">
                            <Grid>
                                <!-- PasswordBox -->
                                <PasswordBox x:Name="txtLoginPassword"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Padding="10"
                                 Height="40"
                                 FontSize="14"/>

                                <!-- Visible TextBox -->
                                <TextBox x:Name="txtLoginPasswordVisible"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Padding="10"
                                 Height="40"
                                 FontSize="14"
                                 Visibility="Collapsed"/>
                            </Grid>
                        </Border>


                        <!-- Show Password Checkbox -->
                        <CheckBox Content="Show Password" Margin="0,5,0,10"
                                  Checked="LoginPassword_Show_Checked"
                                  Unchecked="LoginPassword_Show_Unchecked"/>

                        <!-- Login Button -->
                        <Button Content="Sign In" Height="45" Width="150" Background="#30ABA0" Foreground="White" FontSize="16" Margin="0,20,0,0" Click="Login_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="20">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="Cursor" Value="Hand"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                </Style>
                            </Button.Style>
                        </Button>

                    </StackPanel>
                </Grid>

                <!-- RIGHT PANEL (Intro / Info) -->
                <Grid Grid.Column="1">
                    <Grid.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#30ABA0" Offset="0.0"/>
                            <GradientStop Color="#60D0C5" Offset="1.0"/>
                        </LinearGradientBrush>
                    </Grid.Background>
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20" Width="250">
                        <TextBlock Text="Welcome!" FontSize="28" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                        <TextBlock Text="Login to our system and manage attendance, leaves, and employee performance efficiently."
                                   FontSize="16" TextWrapping="Wrap" Foreground="White" TextAlignment="Center" Margin="0,10,0,0"/>
                        <TextBlock Text="VEMS - Veterinarian Employee Management System" 
                                   FontSize="14" Foreground="White" TextAlignment="Center" Margin="0,20,0,0" FontStyle="Italic" TextWrapping="Wrap"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- Close Button -->
        <Button Content="X" Width="30" Height="30" HorizontalAlignment="Right" VerticalAlignment="Top"
                Margin="0,16,18,0" Background="Transparent" Foreground="Black" BorderThickness="0" FontWeight="Bold"
                Click="CloseButton_Click"/>
    </Grid>
</Window>
