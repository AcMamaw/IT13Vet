<UserControl x:Class="VeterinarianEMS.Views.EmployeePopupControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             Width="Auto" Height="690" Background="Transparent"
             Loaded="UserControl_Loaded">

    <UserControl.Resources>
        <!-- Styles -->
        <Style x:Key="CustomTextBox" TargetType="TextBox">
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="BorderBrush" Value="#CCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="CustomComboBox" TargetType="ComboBox">
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="BorderBrush" Value="#CCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>

        <Style x:Key="CustomDatePicker" TargetType="DatePicker">
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="BorderBrush" Value="#30ABA0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Background" Value="#30ABA0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="BorderBrush" Value="#CCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="10">
        <Border Background="White" CornerRadius="8" Padding="20"
                BorderBrush="#CCC" BorderThickness="1"
                HorizontalAlignment="Center" VerticalAlignment="Center"
                Width="700" Height="706">

            <StackPanel>
                <TextBlock Text="Add New Employee"
                           FontSize="22" FontWeight="SemiBold"
                           Foreground="#30ABA0" Margin="0,0,0,20"/>

                <!-- Personal Information Header -->
                <TextBlock Text="Personal Information" 
                           FontSize="16" FontWeight="Bold" 
                           Foreground="#333" Margin="0,0,0,10"/>

                <!-- Personal Info -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="First Name" Margin="0,0,0,2"/>
                        <TextBox x:Name="FirstNameTextBox" Style="{StaticResource CustomTextBox}"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Middle Name" Margin="0,0,0,2"/>
                        <TextBox x:Name="MiddleNameTextBox" Style="{StaticResource CustomTextBox}"/>
                    </StackPanel>
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Last Name" Margin="0,0,0,2"/>
                        <TextBox x:Name="LastNameTextBox" Style="{StaticResource CustomTextBox}"/>
                    </StackPanel>
                </Grid>

                <!-- Sex, Email, DOB -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Sex" Margin="0,0,0,2"/>
                        <ComboBox x:Name="SexComboBox" Style="{StaticResource CustomComboBox}">
                            <ComboBoxItem Content="Male"/>
                            <ComboBoxItem Content="Female"/>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Email" Margin="0,0,0,2"/>
                        <TextBox x:Name="EmailTextBox" Style="{StaticResource CustomTextBox}" TextChanged="EmailTextBox_TextChanged"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Date of Birth" Margin="0,0,0,2"/>
                        <DatePicker x:Name="DOBPicker" Style="{StaticResource CustomDatePicker}"/>
                    </StackPanel>
                </Grid>

                <!-- Contact, Address, Hire Date -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="2*"/>
                        <!-- Make Address wider if needed -->
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Contact Number" Margin="0,0,0,2"/>
                        <TextBox x:Name="ContactTextBox" Style="{StaticResource CustomTextBox}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Address" Margin="0,0,0,2"/>
                        <TextBox x:Name="AddressTextBox" Style="{StaticResource CustomTextBox}" Height="32"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Hire Date" Margin="0,0,0,2"/>
                        <DatePicker x:Name="HireDatePicker" Style="{StaticResource CustomDatePicker}"/>
                    </StackPanel>
                </Grid>


                <!-- Job Information Header -->
                <TextBlock Text="Job Information" 
           FontSize="16" FontWeight="Bold" 
           Foreground="#333" Margin="20,10,0,10"/>

                <!-- Job Info -->
                <Grid Margin="0,0,0,10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- Department & Position -->
                        <RowDefinition Height="Auto"/>
                        <!-- Hourly Rate & Base Salary -->
                    </Grid.RowDefinitions>

                    <!-- Department & Position -->
                    <Grid Grid.Row="0" Margin="0,0,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Department" Margin="0,0,0,2"/>
                            <ComboBox x:Name="DepartmentComboBox" Style="{StaticResource CustomComboBox}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Position" Margin="0,0,0,2"/>
                            <ComboBox x:Name="PositionComboBox" Style="{StaticResource CustomComboBox}"/>
                        </StackPanel>
                    </Grid>

                    <!-- Hourly Rate & Base Salary -->
                    <Grid Grid.Row="1" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Hourly Rate -->
                        <StackPanel Grid.Column="0" VerticalAlignment="Top">
                            <TextBlock Text="Hourly Rate" Margin="0,0,0,2" VerticalAlignment="Center"/>
                            <TextBox x:Name="HourlyRateTextBox" Style="{StaticResource CustomTextBox}" 
                 TextChanged="HourlyRateTextBox_TextChanged"/>
                        </StackPanel>

                        <!-- Base Salary -->
                        <StackPanel Grid.Column="1" VerticalAlignment="Top">
                            <TextBlock Text="Base Salary" Margin="0,0,0,2" VerticalAlignment="Center"/>
                            <TextBox x:Name="BaseSalaryTextBox" Style="{StaticResource CustomTextBox}" IsReadOnly="True"/>
                        </StackPanel>
                    </Grid>
                </Grid>

                <!-- Account Info -->
                <TextBlock Text="Account Information"
                           FontSize="16" FontWeight="Bold"
                           Foreground="#333" Margin="20,10,0,10"/>

                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.5*"/>
                        <ColumnDefinition Width="1.5*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Username" Margin="0,0,0,2"/>
                        <TextBox x:Name="UsernameTextBox" Style="{StaticResource CustomTextBox}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Password" Margin="0,0,0,2"/>
                        <TextBox x:Name="PasswordTextBox" Style="{StaticResource CustomTextBox}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" VerticalAlignment="Bottom" Margin="10,0,0,10">
                        <Button Content="Generate" Width="90" Height="32"
                                Background="#30ABA0" Foreground="White"
                                BorderThickness="0" Cursor="Hand"
                                Click="GeneratePassword_Click"/>
                    </StackPanel>
                </Grid>

                <!-- Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button Content="Save" Style="{StaticResource PrimaryButton}" Click="Save_Click"/>
                    <Button Content="Cancel" Style="{StaticResource SecondaryButton}" Click="Cancel_Click"/>
                </StackPanel>

            </StackPanel>
        </Border>
    </Grid>
</UserControl>
