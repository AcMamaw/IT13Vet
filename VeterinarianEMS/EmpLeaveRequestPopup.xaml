<UserControl x:Class="VeterinarianEMS.Controls.LeaveRequestPopup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="350" Height="350">

    <Border Background="White"
            CornerRadius="8"
            Padding="20"
            BorderBrush="#CCC"
            BorderThickness="1"
            SnapsToDevicePixels="True">

        <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Title -->
                <RowDefinition Height="Auto"/>
                <!-- Leave Type -->
                <RowDefinition Height="Auto"/>
                <!-- Start Date -->
                <RowDefinition Height="Auto"/>
                <!-- End Date -->
                <RowDefinition Height="Auto"/>
                <!-- Buttons -->
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock Grid.Row="0"
                       Text="Add Leave Request"
                       Foreground="#30ABA0"
                       FontSize="20"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <!-- Leave Type -->
            <StackPanel Grid.Row="1" Margin="0,0,0,10">
                <TextBlock Text="Leave Type:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="LeaveTypeTextBox"
             Width="280"
             Height="35"
             FontSize="14"
             Padding="8,0"
             VerticalContentAlignment="Center"
             BorderBrush="#CCC"
             BorderThickness="1"
             Background="White">
                    <TextBox.Template>
                        <ControlTemplate TargetType="TextBox">
                            <Border Background="{TemplateBinding Background}" 
                        BorderBrush="{TemplateBinding BorderBrush}" 
                        BorderThickness="{TemplateBinding BorderThickness}" 
                        CornerRadius="6">
                                <ScrollViewer x:Name="PART_ContentHost"/>
                            </Border>
                        </ControlTemplate>
                    </TextBox.Template>
                </TextBox>
            </StackPanel>

            <!-- Start Date -->
            <StackPanel Grid.Row="2" Margin="0,0,0,10">
                <TextBlock Text="Start Date:" FontWeight="Bold" Margin="0,0,0,5"/>
                <DatePicker x:Name="StartDatePicker" Width="280" Height="35"/>
            </StackPanel>

            <!-- End Date -->
            <StackPanel Grid.Row="3" Margin="0,0,0,20">
                <TextBlock Text="End Date:" FontWeight="Bold" Margin="0,0,0,5"/>
                <DatePicker x:Name="EndDatePicker" Width="280" Height="35"/>
            </StackPanel>

            <!-- Buttons -->
            <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Save"
                        Width="100"
                        Height="35"
                        Margin="0,0,10,0"
                        Background="#30ABA0"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="14"
                        Click="Save_Click"/>

                <Button Content="Cancel"
                        Width="100"
                        Height="35"
                        Background="Transparent"
                        Foreground="#333"
                        BorderBrush="#CCC"
                        BorderThickness="1"
                        FontSize="14"
                        Click="Cancel_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
