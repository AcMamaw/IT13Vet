<UserControl x:Class="VeterinarianEMS.Controls.EmpShift"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="300" Width="400">

    <Border Background="White"
            CornerRadius="8"
            Padding="20"
            BorderBrush="#CCC"
            BorderThickness="1">

        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Stretch">

            <!-- Title Label -->
            <TextBlock Text="Assign Shift"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="#30ABA0"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <!-- Shift Selection -->
            <StackPanel Margin="0,0,0,10">
                <TextBlock Text="Select Shift:" FontWeight="Bold"/>
                <ComboBox x:Name="ShiftComboBox"
                          DisplayMemberPath="ShiftName"
                          SelectedValuePath="ShiftID"
                          FontSize="14"
                          Height="25"/>
            </StackPanel>

            <!-- Days Selection -->
            <StackPanel Margin="0,10,0,10">
                <TextBlock Text="Select Day(s):" FontWeight="Bold"/>
                <UniformGrid Columns="3" Margin="0,5,0,0">
                    <CheckBox x:Name="MondayCheckBox" Content="Monday"/>
                    <CheckBox x:Name="TuesdayCheckBox" Content="Tuesday"/>
                    <CheckBox x:Name="WednesdayCheckBox" Content="Wednesday"/>
                    <CheckBox x:Name="ThursdayCheckBox" Content="Thursday"/>
                    <CheckBox x:Name="FridayCheckBox" Content="Friday"/>
                    <CheckBox x:Name="SaturdayCheckBox" Content="Saturday"/>
                </UniformGrid>
            </StackPanel>

            <!-- Save / Cancel Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0" >
                <Button Content="Save"
                        Width="100"
                        Height="35"
                        Background="#30ABA0"
                        Foreground="White"
                        BorderThickness="0"
                        Click="Save_Click"
                        Margin="0,0,10,0"/>
                <Button Content="Cancel"
                        Width="100"
                        Height="35"
                        Background="#E0E0E0"
                        Foreground="Black"
                        BorderThickness="0"
                        Click="Cancel_Click"/>
            </StackPanel>

        </StackPanel>
    </Border>
</UserControl>
