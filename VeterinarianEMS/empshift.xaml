<UserControl x:Class="VeterinarianEMS.Controls.EmpShift"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="350" Width="400">

    <UserControl.Resources>

        <!-- Subtle Shadow for the whole panel -->
        <DropShadowEffect x:Key="PanelShadow" ShadowDepth="1" Direction="270" Color="#000" Opacity="0.15" BlurRadius="5"/>

        <!-- Input Label Style -->
        <Style TargetType="TextBlock" x:Key="InputLabelStyle">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <!-- CheckBox Style for better alignment and font -->
        <Style TargetType="CheckBox">
            <Setter Property="Margin" Value="0,3"/>
            <Setter Property="Foreground" Value="#444444"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Primary Button Style (Save - Teal/Green) -->
        <Style TargetType="Button" x:Key="PrimaryButtonStyle">
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Background" Value="#30ABA0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#38C0B2"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#259489"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary Button Style (Cancel - Neutral/Gray) -->
        <Style TargetType="Button" x:Key="SecondaryButtonStyle" BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Background" Value="#EAEAEA"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#D0D0D0"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#C0C0C0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>

    <Border Background="#F9F9F9"
            CornerRadius="10"
            Padding="25"
            BorderBrush="#E0E0E0"
            BorderThickness="1"
            Effect="{DynamicResource PanelShadow}">

        <StackPanel VerticalAlignment="Center" Height="294">

            <!-- Title Label -->
            <TextBlock Text="Assign Shift"
                       FontSize="22"
                       FontWeight="ExtraBold"
                       Foreground="#38C0B2"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,25"/>

            <!-- Shift Selection -->
            <StackPanel Margin="0,0,0,15">
                <TextBlock Text="Select Shift:" Style="{StaticResource InputLabelStyle}"/>
                <!-- Fixed ComboBox with proper drop down -->
                <ComboBox x:Name="ShiftComboBox"
                          DisplayMemberPath="ShiftName"
                          SelectedValuePath="ShiftID"
                          FontSize="14"
                          Height="32"
                          BorderBrush="#D0D0D0"
                          BorderThickness="1"
                          VerticalContentAlignment="Center"/>
            </StackPanel>

            <!-- Days Selection -->
            <StackPanel Margin="0,10,0,25">
                <TextBlock Text="Select Day(s):" Style="{StaticResource InputLabelStyle}"/>

                <!-- All Days Checkbox -->
                <CheckBox x:Name="AllDaysCheckBox" Content="All Days" Margin="0,0,0,5"
                          Checked="AllDaysCheckBox_Checked"
                          Unchecked="AllDaysCheckBox_Unchecked"/>

                <UniformGrid Columns="3" Margin="0,5,0,0">
                    <CheckBox x:Name="MondayCheckBox" Content="Monday" Checked="DayCheckBox_Checked" Unchecked="DayCheckBox_Unchecked"/>
                    <CheckBox x:Name="TuesdayCheckBox" Content="Tuesday" Checked="DayCheckBox_Checked" Unchecked="DayCheckBox_Unchecked"/>
                    <CheckBox x:Name="WednesdayCheckBox" Content="Wednesday" Checked="DayCheckBox_Checked" Unchecked="DayCheckBox_Unchecked"/>
                    <CheckBox x:Name="ThursdayCheckBox" Content="Thursday" Checked="DayCheckBox_Checked" Unchecked="DayCheckBox_Unchecked"/>
                    <CheckBox x:Name="FridayCheckBox" Content="Friday" Checked="DayCheckBox_Checked" Unchecked="DayCheckBox_Unchecked"/>
                    <CheckBox x:Name="SaturdayCheckBox" Content="Saturday" Checked="DayCheckBox_Checked" Unchecked="DayCheckBox_Unchecked"/>
                </UniformGrid>
            </StackPanel>

            <!-- Save / Cancel Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                <Button Content="Save"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Click="Save_Click"
                        Margin="0,0,15,0"/>
                <Button Content="Cancel"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Click="Cancel_Click"/>
            </StackPanel>

        </StackPanel>
    </Border>
</UserControl>
