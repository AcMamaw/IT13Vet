<UserControl x:Class="VeterinarianEMS.EmpAttendanceControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VeterinarianEMS"
             xmlns:controls="clr-namespace:VeterinarianEMS.Controls"  
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000">

    <Grid Background="#F0F0F0" Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with Clock -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Attendance" 
                       Grid.Column="0" 
                       FontSize="28" 
                       FontWeight="Bold" 
                       VerticalAlignment="Center" 
                       Foreground="Black"/>
            <TextBlock x:Name="ClockTextBlock"
                       Text="00:00:00 N/A" 
                       Grid.Column="1" 
                       FontSize="18" 
                       FontWeight="SemiBold" 
                       VerticalAlignment="Center" 
                       Foreground="Black"/>
        </Grid>

        <!-- Attendance Logs Section -->
        <Border Grid.Row="1" Background="White">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Logs Header with Buttons -->
                <Grid Grid.Row="0" Margin="20,20,20,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Attendance Logs" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               VerticalAlignment="Center"/>
                    <!-- In / Out Buttons -->
                    <StackPanel Grid.Column="1"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center">

                        <Button x:Name="InButton"
                            Content=" Sign In"
                            Background="#30ABA0"
                            Foreground="White"
                            Padding="15,5"
                            BorderThickness="0"
                            FontWeight="SemiBold"
                            FontSize="14"
                            Margin="0,0,5,0"
                            BorderBrush="#30ABA0"
                            Click="OnInButtonClick"/>

                        <Button x:Name="OutButton"
                            Content="Sign Out"
                            Background="#E53935"
                            Foreground="White"
                            Padding="15,5"
                            BorderThickness="0"
                            FontWeight="SemiBold"
                            FontSize="14"
                            BorderBrush="#E53935"
                            Click="OnOutButtonClick"/>

                    </StackPanel>
                </Grid>

                <!-- Controls (Search + Records) -->
                <Grid Grid.Row="1" Margin="20,0,20,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- 🔎 Search -->
                    <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center">
                        <TextBlock Text="Search:" VerticalAlignment="Center" Margin="0,0,5,0" Foreground="Black"/>
                        <TextBox Width="200" x:Name="SearchTextBox" TextChanged="SearchTextBox_TextChanged"/>
                    </StackPanel>

                    <!-- 📋 Records per page -->
                    <StackPanel Orientation="Horizontal" Grid.Column="2" VerticalAlignment="Center">
                        <TextBlock Text="Display" VerticalAlignment="Center" Margin="0,0,5,0" Foreground="Black"/>
                        <controls:EntriesPerPageSelector x:Name="EntriesSelector" Width="80"/>
                        <TextBlock Text="records per page" VerticalAlignment="Center" Margin="5,0,0,0" Foreground="Black"/>
                    </StackPanel>
                </Grid>

                <!-- DataGrid -->
                <DataGrid x:Name="AttendanceDataGrid"
                          Grid.Row="2"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          CanUserSortColumns="True"
                          HeadersVisibility="Column"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto"
                          BorderThickness="0"
                          GridLinesVisibility="None"
                          Margin="20,0,20,10">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="#" Binding="{Binding Number}" Width="Auto"/>
                        <DataGridTextColumn Header="EmployeeID" Binding="{Binding EmployeeId}" Width="*"/>
                        <DataGridTextColumn Header="Employee Name" Binding="{Binding EmployeeName}" Width="*"/>
                        <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="*"/>
                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*"/>
                        <DataGridTextColumn Header="Date &amp; Time" Binding="{Binding DateTime}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Pagination -->
                <Grid Grid.Row="3" Margin="0,15,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock x:Name="PaginationStatus"
                               Grid.Column="0" 
                               Text="Showing 1 to 1 of 1 entries" 
                               VerticalAlignment="Center" 
                               Foreground="Gray"/>

                    <StackPanel Orientation="Horizontal" 
                                Grid.Column="1" 
                                VerticalAlignment="Top" 
                                HorizontalAlignment="Left" 
                                Margin="0,-5,0,0">

                        <Button x:Name="PreviousButton"
                                Content="Previous" 
                                Background="Transparent" 
                                Foreground="#333" 
                                BorderThickness="1" 
                                Padding="5,2" 
                                Margin="5,0"
                                Click="Previous_Click"/>
                        <Button x:Name="PageNumberButton"
                                Content="1" 
                                Background="#30ABA0" 
                                Foreground="White" 
                                BorderThickness="0" 
                                Padding="5,2" 
                                Margin="5,0"/>
                        <Button x:Name="NextButton"
                                Content="Next" 
                                Background="Transparent" 
                                Foreground="#333" 
                                BorderThickness="1" 
                                Padding="5,2" 
                                Margin="5,0"
                                Click="Next_Click"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
