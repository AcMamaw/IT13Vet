<UserControl x:Class="VeterinarianEMS.AttendanceControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VeterinarianEMS"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000">

    <Grid Background="#F0F0F0" Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Attendance" Grid.Column="0" FontSize="28" FontWeight="Bold" VerticalAlignment="Center" Foreground="Black"/>
            <TextBlock Text="06:43:02 PM" Grid.Column="1" FontSize="18" FontWeight="SemiBold" VerticalAlignment="Center" Foreground="Black"/>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- QR Scanner -->
            <Border Grid.Column="0" Background="White" Margin="0,0,15,0">
                <StackPanel Margin="20">
                    <TextBlock Text="QR Code Scanner" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>
                    <Border Height="200" Background="#F0F0F0" Margin="0,0,0,20"/>
                    <Button Content="Turn Off Camera"
                            Background="#30ABA0"
                            Foreground="White"
                            Padding="15,5"
                            BorderThickness="0"
                            FontWeight="SemiBold"
                            FontSize="14"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            BorderBrush="#30ABA0"/>
                </StackPanel>
            </Border>

            <!-- Attendance Logs -->
            <Border Grid.Column="1" Background="White">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Grid Grid.Row="0" Margin="20,20,20,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Attendance Logs" FontSize="16" FontWeight="Bold" VerticalAlignment="Center"/>
                        <Button Grid.Column="1"
                                Content="Attendance Records"
                                Background="#333333"
                                Foreground="White"
                                Padding="15,5"
                                BorderThickness="0"
                                FontWeight="SemiBold"
                                FontSize="14"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                BorderBrush="#333333"/>
                    </Grid>

                    <!-- Controls -->
                    <Grid Grid.Row="1" Margin="20,0,20,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Records per page -->
                        <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Text="Display" VerticalAlignment="Center" Margin="0,0,5,0" Foreground="Black"/>
                            <ComboBox SelectedIndex="1" Width="60"
                                      Background="White"
                                      BorderBrush="#CCC"
                                      BorderThickness="1"
                                      Padding="3"
                                      FontSize="14">
                                <ComboBoxItem Content="5"/>
                                <ComboBoxItem Content="10"/>
                                <ComboBoxItem Content="15"/>
                                <ComboBoxItem Content="20"/>
                                <ComboBoxItem Content="25"/>
                            </ComboBox>
                            <TextBlock Text="records per page" VerticalAlignment="Center" Margin="5,0,0,0" Foreground="Black"/>
                        </StackPanel>

                        <!-- Search -->
                        <StackPanel Orientation="Horizontal" Grid.Column="2" VerticalAlignment="Center">
                            <TextBlock Text="Search:" VerticalAlignment="Center" Margin="0,0,5,0" Foreground="Black"/>
                            <TextBox Width="200"
                                     Background="White"
                                     BorderBrush="#CCC"
                                     BorderThickness="1"
                                     Padding="5"
                                     FontSize="14"
                                     Foreground="Black"
                                     Text=""/>
                        </StackPanel>
                    </Grid>

                    <!-- DataGrid -->
                    <DataGrid Grid.Row="2"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              CanUserSortColumns="True"
                              HeadersVisibility="Column"
                              HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Auto"
                              BorderThickness="0"
                              GridLinesVisibility="None"
                              Margin="20,0,20,10">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="#" Binding="{Binding Number}" Width="Auto"/>
                            <DataGridTextColumn Header="EmployeeID" Binding="{Binding EmployeeId}" Width="*"/>
                            <DataGridTextColumn Header="Employee Name" Binding="{Binding EmployeeName}" Width="*"/>
                            <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="*"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*"/>
                            <DataGridTextColumn Header="Date &amp; Time" Binding="{Binding DateTime}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Pagination -->
                    <Grid Grid.Row="3" Margin="20,15,20,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="No entries available" VerticalAlignment="Center" Foreground="Gray"/>
                        <StackPanel Orientation="Horizontal" Grid.Column="1">
                            <Button Content="Previous"
                                    Background="Transparent"
                                    Foreground="#333333"
                                    BorderThickness="1"
                                    Padding="5,2"
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    Margin="5,0"/>
                            <Button Content="Next"
                                    Background="Transparent"
                                    Foreground="#333333"
                                    BorderThickness="1"
                                    Padding="5,2"
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    Margin="5,0"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
