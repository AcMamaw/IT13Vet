<UserControl x:Class="VeterinarianEMS.Views.EmpEdit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="Auto" Height="600" Background="Transparent">
             

    <UserControl.Resources>
        <!-- Styles copied from EmployeePopupControl -->
        <Style x:Key="CustomTextBox" TargetType="TextBox">
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="BorderBrush" Value="#CCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="CustomComboBox" TargetType="ComboBox">
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="BorderBrush" Value="#CCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>

        <Style x:Key="CustomDatePicker" TargetType="DatePicker">
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="BorderBrush" Value="#30ABA0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Background" Value="#30ABA0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="BorderBrush" Value="#CCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="10">
        <Border Background="White" CornerRadius="8" Padding="20"
                BorderBrush="#CCC" BorderThickness="1"
                HorizontalAlignment="Center" VerticalAlignment="Center"
                Width="700" Height="600">

            <StackPanel>
                <TextBlock Text="Edit Employee"
                           FontSize="22" FontWeight="SemiBold"
                           Foreground="#30ABA0" Margin="0,0,0,20"/>

                <!-- Personal Information -->
                <TextBlock Text="Personal Information" 
                           FontSize="16" FontWeight="Bold" 
                           Foreground="#333" Margin="0,0,0,10"/>

                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="First Name" Margin="0,0,0,2"/>
                        <TextBox x:Name="FirstNameTextBox" Style="{StaticResource CustomTextBox}"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Middle Name" Margin="0,0,0,2"/>
                        <TextBox x:Name="MiddleNameTextBox" Style="{StaticResource CustomTextBox}"/>
                    </StackPanel>
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Last Name" Margin="0,0,0,2"/>
                        <TextBox x:Name="LastNameTextBox" Style="{StaticResource CustomTextBox}"/>
                    </StackPanel>
                </Grid>

                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Sex" Margin="0,0,0,2"/>
                        <ComboBox x:Name="SexComboBox" Style="{StaticResource CustomComboBox}">
                            <ComboBoxItem Content="Male"/>
                            <ComboBoxItem Content="Female"/>
                        </ComboBox>
                    </StackPanel>
                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Date of Birth" Margin="0,0,0,2"/>
                        <DatePicker x:Name="DOBPicker" Style="{StaticResource CustomDatePicker}"/>
                    </StackPanel>
                </Grid>

                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Contact Number" Margin="0,0,0,2"/>
                        <TextBox x:Name="ContactTextBox" Style="{StaticResource CustomTextBox}"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Hire Date" Margin="0,0,0,2"/>
                        <DatePicker x:Name="HireDatePicker" Style="{StaticResource CustomDatePicker}"/>
                    </StackPanel>
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Address" Margin="0,0,0,2"/>
                        <TextBox x:Name="AddressTextBox" Style="{StaticResource CustomTextBox}" Height="32"/>
                    </StackPanel>
                </Grid>

                <!-- Job Information -->
                <TextBlock Text="Job Information" 
                           FontSize="16" FontWeight="Bold" 
                           Foreground="#333" Margin="20,10,0,10"/>

                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Department" Margin="0,0,0,2"/>
                        <ComboBox x:Name="DepartmentComboBox" Style="{StaticResource CustomComboBox}"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Position" Margin="0,0,0,2"/>
                        <ComboBox x:Name="PositionComboBox" Style="{StaticResource CustomComboBox}"/>
                    </StackPanel>
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Base Salary" Margin="0,0,0,2"/>
                        <TextBox x:Name="BaseSalaryTextBox" Style="{StaticResource CustomTextBox}"/>
                    </StackPanel>
                </Grid>

                <!-- Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,20,0,0">
                    <Button Content="Save" Style="{StaticResource PrimaryButton}" Click="Save_Click"/>
                    <Button Content="Cancel" Style="{StaticResource SecondaryButton}" Click="Cancel_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
