<UserControl x:Class="VeterinarianEMS.Controls.OvertimeRequestPopup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="400" Height="350">

    <Border Background="White"
            CornerRadius="8"
            Padding="20"
            BorderBrush="#CCC"
            BorderThickness="1"
            SnapsToDevicePixels="True">

        <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Title -->
                <RowDefinition Height="Auto"/>
                <!-- Overtime Date -->
                <RowDefinition Height="Auto"/>
                <!-- Start Time -->
                <RowDefinition Height="Auto"/>
                <!-- End Time -->
                <RowDefinition Height="Auto"/>
                <!-- Buttons -->
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock Grid.Row="0"
                       Text="Add Overtime Request"
                       Foreground="#30ABA0"
                       FontSize="20"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <!-- Overtime Date -->
            <StackPanel Grid.Row="1" Margin="0,0,0,15">
                <TextBlock Text="Overtime Date:" FontWeight="Bold" Margin="0,0,0,5"/>
                <DatePicker x:Name="OvertimeDatePicker" Width="280" Height="35"/>
            </StackPanel>

            <!-- Start Time -->
            <StackPanel Grid.Row="2" Margin="0,0,0,15">
                <TextBlock Text="Start Time:" FontWeight="Bold" Margin="0,0,0,5"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBox x:Name="StartHourTextBox" Width="50" Height="35" MaxLength="2"
                             TextAlignment="Center" VerticalContentAlignment="Center" Margin="0,0,5,0"
                             PreviewTextInput="NumberOnly_PreviewTextInput"/>
                    <TextBlock Text=":" VerticalAlignment="Center" FontSize="16" Margin="0,0,5,0"/>
                    <TextBox x:Name="StartMinuteTextBox" Width="50" Height="35" MaxLength="2"
                             TextAlignment="Center" VerticalContentAlignment="Center" Margin="0,0,5,0"
                             PreviewTextInput="NumberOnly_PreviewTextInput"/>
                    <ComboBox x:Name="StartAmPmComboBox" Width="70" Height="35" SelectedIndex="0">
                        <ComboBoxItem Content="AM"/>
                        <ComboBoxItem Content="PM"/>
                    </ComboBox>
                </StackPanel>
            </StackPanel>

            <!-- End Time -->
            <StackPanel Grid.Row="3" Margin="0,0,0,20">
                <TextBlock Text="End Time:" FontWeight="Bold" Margin="0,0,0,5"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBox x:Name="EndHourTextBox" Width="50" Height="35" MaxLength="2"
                             TextAlignment="Center" VerticalContentAlignment="Center" Margin="0,0,5,0"
                             PreviewTextInput="NumberOnly_PreviewTextInput"/>
                    <TextBlock Text=":" VerticalAlignment="Center" FontSize="16" Margin="0,0,5,0"/>
                    <TextBox x:Name="EndMinuteTextBox" Width="50" Height="35" MaxLength="2"
                             TextAlignment="Center" VerticalContentAlignment="Center" Margin="0,0,5,0"
                             PreviewTextInput="NumberOnly_PreviewTextInput"/>
                    <ComboBox x:Name="EndAmPmComboBox" Width="70" Height="35" SelectedIndex="0">
                        <ComboBoxItem Content="AM"/>
                        <ComboBoxItem Content="PM"/>
                    </ComboBox>
                </StackPanel>
            </StackPanel>

            <!-- Buttons -->
            <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Save"
                        Width="100"
                        Height="35"
                        Margin="0,0,10,0"
                        Background="#30ABA0"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="14"
                        Click="Save_Click"/>
                <Button Content="Cancel"
                        Width="100"
                        Height="35"
                        Background="Transparent"
                        Foreground="#333"
                        BorderBrush="#CCC"
                        BorderThickness="1"
                        FontSize="14"
                        Click="Cancel_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
