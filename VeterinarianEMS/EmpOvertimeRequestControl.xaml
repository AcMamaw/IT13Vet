<UserControl x:Class="VeterinarianEMS.EmpOvertimeRequestControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VeterinarianEMS"
             xmlns:controls="clr-namespace:VeterinarianEMS.Controls"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000">

    <Grid Background="#F0F0F0" Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Employee Overtime Requests" 
                       Grid.Column="0"
                       FontSize="28" 
                       FontWeight="Bold" 
                       VerticalAlignment="Center"
                       Foreground="Black"/>

            <Button Grid.Column="1"
                    Background="#30ABA0"
                    Foreground="White"
                    Padding="10,5"
                    BorderThickness="0"
                    Click="AddOvertime_Click">
                <Border CornerRadius="8" Background="#30ABA0">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Plus" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBlock Text="Add Overtime" Foreground="White"/>
                    </StackPanel>
                </Border>
            </Button>
        </Grid>

        <!-- Overtime Requests Content -->
        <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Search + Entries per page -->
                <Grid Grid.Row="0" Margin="10,0,10,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.Column="0">
                        <TextBlock Text="Search:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBox x:Name="SearchTextBox" Width="200" TextChanged="SearchTextBox_TextChanged"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.Column="1">
                        <TextBlock Text="Display" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <controls:EntriesPerPageSelector x:Name="EntriesSelector" Width="80"/>
                        <TextBlock Text="records per page" VerticalAlignment="Center" Margin="5,0,0,0"/>
                    </StackPanel>
                </Grid>

                <!-- DataGrid -->
                <DataGrid x:Name="OvertimeDataGrid"
                          Grid.Row="1"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          CanUserSortColumns="True"
                          HeadersVisibility="Column"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto"
                          BorderThickness="0"
                          GridLinesVisibility="None"
                          Margin="10,0,10,10">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding OvertimeID}" Width="*"/>
                        <DataGridTextColumn Header="Employee" Binding="{Binding EmployeeName}" Width="*"/>
                        <DataGridTextColumn Header="Overtime Date" Binding="{Binding OvertimeDate, StringFormat=d}" Width="*"/>
                        <DataGridTextColumn Header="Start Time" Binding="{Binding StartTime}" Width="*"/>
                        <DataGridTextColumn Header="End Time" Binding="{Binding EndTime}" Width="*"/>
                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*"/>

                        <DataGridTemplateColumn Header="Actions" Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="10,0,0,0">
                                        <!-- Delete Button -->
                                        <Button ToolTip="Delete" Margin="2" BorderThickness="0" Click="DeleteOvertime_Click">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Background" Value="Transparent"/>
                                                    <Setter Property="Padding" Value="6"/>
                                                    <Setter Property="Cursor" Value="Hand"/>
                                                    <Setter Property="Foreground" Value="#E35050"/>
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border Background="{TemplateBinding Background}"
                                                                        CornerRadius="4"
                                                                        Padding="{TemplateBinding Padding}">
                                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                                      VerticalAlignment="Center"
                                                                                      RecognizesAccessKey="True"/>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#E35050"/>
                                                            <Setter Property="Foreground" Value="White"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                            <materialDesign:PackIcon Kind="Delete"
                                              Width="16" Height="16"
                                              Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"/>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Pagination -->
                <Grid Grid.Row="2" Margin="0,15,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               x:Name="EntriesInfoTextBlock"
                               Text="Showing 0 to 0 of 0 entries"
                               VerticalAlignment="Center"
                               Foreground="Gray"
                               Margin="5,0"/>

                    <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Center" Margin="10">
                        <Button Content="Previous"
                                Click="Previous_Click"
                                Background="Transparent"
                                Foreground="#333"
                                BorderThickness="1"
                                Padding="5,2"
                                Margin="5,0"/>
                        <TextBlock x:Name="PageInfoTextBlock"
                                   Text="1"
                                   Background="#30ABA0"
                                   Foreground="White"
                                   FontWeight="Bold"
                                   Padding="5,2"
                                   Margin="5,0"
                                   VerticalAlignment="Center"
                                   TextAlignment="Center"/>
                        <Button Content="Next"
                                Click="Next_Click"
                                Background="Transparent"
                                Foreground="#333"
                                BorderThickness="1"
                                Padding="5,2"
                                Margin="5,0"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
