<UserControl x:Class="VeterinarianEMS.ShiftsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VeterinarianEMS"
             xmlns:controls="clr-namespace:VeterinarianEMS.Controls"  
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000">

    <Grid Background="#F0F0F0" Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Title -->
            <TextBlock Text="Shifts" 
               Grid.Column="0"
               FontSize="28" 
               FontWeight="Bold" 
               VerticalAlignment="Center"
               Foreground="Black"/>

            <!-- Add Shift Button -->
            <Button Grid.Column="1"
            Background="#30ABA0"
            Foreground="White"
            Padding="10,5"
            BorderThickness="0"
            Click="AddShift_Click">
                <Border CornerRadius="8" Background="#30ABA0">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Plus" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBlock Text="Add Shift" Foreground="White"/>
                    </StackPanel>
                </Border>
            </Button>
        </Grid>


        <!-- Shifts Content -->
        <Border Grid.Row="1" 
                  Background="White" 
                  BorderBrush="#CCC" 
                  CornerRadius="8"
                  BorderThickness="1" 
                  Padding="10">
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Search + Entries -->
                    <RowDefinition Height="*"/>
                    <!-- DataGrid -->
                    <RowDefinition Height="Auto"/>
                    <!-- Pagination -->
                </Grid.RowDefinitions>

                <!-- Search + Entries per page -->
                <Grid Grid.Row="0" Margin="10,0,10,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- 🔎 Search -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.Column="0">
                        <TextBlock Text="Search:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBox x:Name="SearchTextBox" Width="200" TextChanged="SearchTextBox_TextChanged"/>
                    </StackPanel>

                    <!-- 📋 Records per page -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.Column="1">
                        <TextBlock Text="Display" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <controls:EntriesPerPageSelector x:Name="EntriesSelector" Width="80"/>
                        <TextBlock Text="records per page" VerticalAlignment="Center" Margin="5,0,0,0"/>
                    </StackPanel>
                </Grid>

                <!-- Shifts DataGrid (Attendance Grid Style) -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <DataGrid x:Name="ShiftsDataGrid"
              AutoGenerateColumns="False"
              IsReadOnly="True"
              HeadersVisibility="Column"
              BorderThickness="0"
              GridLinesVisibility="None"
              HorizontalScrollBarVisibility="Auto"
              VerticalScrollBarVisibility="Auto"
              RowHeight="50"
              ColumnHeaderHeight="45"
              AlternatingRowBackground="#FAFAFA"
              Background="White"
              MinHeight="200"
              MaxHeight="400"
              CanUserResizeRows="False">

                        <DataGrid.Resources>
                            <!-- Center alignment style for cells -->
                            <Style x:Key="CenterCellStyle" TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="TextAlignment" Value="Center"/>
                                <Setter Property="FontSize" Value="14"/>
                                <Setter Property="Foreground" Value="#333"/>
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="0"/>
                            </Style>

                            <!-- Header style -->
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                <Setter Property="VerticalContentAlignment" Value="Center"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="FontSize" Value="14"/>
                                <Setter Property="Background" Value="#F5F5F5"/>
                                <Setter Property="Foreground" Value="#444"/>
                                <Setter Property="Height" Value="45"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                <Setter Property="BorderBrush" Value="#E0E0E0"/>
                                <Setter Property="Padding" Value="5,0,5,0"/>
                            </Style>

                            <!-- Row hover effect -->
                            <Style TargetType="DataGridRow">
                                <Setter Property="Background" Value="White"/>
                                <Setter Property="BorderBrush" Value="#E0E0E0"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                <Setter Property="SnapsToDevicePixels" Value="True"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#E3F2FD"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.Resources>

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="70"
                                ElementStyle="{StaticResource CenterCellStyle}"/>
                            <DataGridTextColumn Header="Shift Name" Binding="{Binding Name}" Width="*"
                                ElementStyle="{StaticResource CenterCellStyle}"/>
                            <DataGridTextColumn Header="Start Time" Binding="{Binding StartTime}" Width="*"
                                ElementStyle="{StaticResource CenterCellStyle}"/>
                            <DataGridTextColumn Header="End Time" Binding="{Binding EndTime}" Width="*"
                                ElementStyle="{StaticResource CenterCellStyle}"/>

                            <!-- Actions Column -->
                            <DataGridTemplateColumn Header="Actions" Width="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0">
                                            <!-- DELETE BUTTON -->
                                            <Button ToolTip="Delete" Click="DeleteShift_Click" Margin="2" BorderThickness="0" Cursor="Hand">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Background" Value="Transparent"/>
                                                        <Setter Property="Padding" Value="6"/>
                                                        <Setter Property="Foreground" Value="#E35050"/>
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="Button">
                                                                    <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#E35050"/>
                                                                <Setter Property="Foreground" Value="White"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                                <materialDesign:PackIcon Kind="Delete" Width="16" Height="16"
                                                         Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"/>
                                            </Button>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                        </DataGrid.Columns>
                    </DataGrid>
                </ScrollViewer>

                <!-- Pagination -->
                <Grid Grid.Row="2" Margin="0,15,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left side: showing entries info -->
                    <TextBlock Grid.Column="0"
               x:Name="EntriesInfoTextBlock"
               Text="Showing 0 to 0 of 0 entries"
               VerticalAlignment="Center"
               Foreground="Gray"
               Margin="5,0"/>

                    <!-- Right side: pagination controls -->
                    <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Center" Margin="10">

                        <!-- Previous Button -->
                        <Button Content="Previous"
                Click="Previous_Click"
                Background="Transparent"
                Foreground="#333"
                BorderThickness="1"
                Padding="5,2"
                Margin="5,0"/>

                        <!-- Current Page Number -->
                        <TextBlock x:Name="PageInfoTextBlock"
                   Text="1"
                   Background="#30ABA0"
                   Foreground="White"
                   FontWeight="Bold"
                   Padding="5,2"
                   Margin="5,0"
                   VerticalAlignment="Center"
                   TextAlignment="Center"/>

                        <!-- Next Button -->
                        <Button Content="Next"
                Click="Next_Click"
                Background="Transparent"
                Foreground="#333"
                BorderThickness="1"
                Padding="5,2"
                Margin="5,0"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
