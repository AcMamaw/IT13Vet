<UserControl x:Class="VeterinarianEMS.ShiftsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VeterinarianEMS"
             xmlns:controls="clr-namespace:VeterinarianEMS.Controls"  
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">

    <Grid Background="#F0F0F0" Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Shifts" 
                       Grid.Column="0"
                       FontSize="28" 
                       FontWeight="Bold" 
                       VerticalAlignment="Center"
                       Foreground="Black"/>

            <Button Grid.Column="1"
                    Background="#30ABA0"
                    Foreground="White"
                    Padding="15,5"
                    BorderThickness="0"
                    FontWeight="SemiBold"
                    FontSize="14"
                    Margin="0,0,0,0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="+" FontSize="16" FontWeight="Bold" Margin="0,0,5,0"/>
                    <TextBlock Text="Add Shift"/>
                </StackPanel>
            </Button>
        </Grid>

        <!-- Main Container -->
        <Border Grid.Row="1"
                Background="White"
                Padding="15"
                BorderBrush="#CCC"
                BorderThickness="1">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Controls: Show entries & Search -->
                <Grid Grid.Row="0" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Show entries -->
                    <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center">
                        <TextBlock Text="Show" VerticalAlignment="Center" Margin="0,0,5,0" Foreground="Black"/>

                        <controls:EntriesPerPageSelector x:Name="EntriesSelector" Width="80"/>

                        <TextBlock Text="entries" VerticalAlignment="Center" Margin="5,0,0,0" Foreground="Black"/>
                    </StackPanel>

                    <!-- Search -->
                    <StackPanel Orientation="Horizontal" Grid.Column="2" VerticalAlignment="Center">
                        <TextBlock Text="Search:" VerticalAlignment="Center" Margin="0,0,5,0" Foreground="Black"/>
                        <TextBox Width="200"
                                 Background="White"
                                 BorderBrush="#CCC"
                                 BorderThickness="1"
                                 Padding="5"
                                 FontSize="14"
                                 Foreground="Black"/>
                    </StackPanel>
                </Grid>

                <!-- DataGrid -->
                <DataGrid Grid.Row="1"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          CanUserSortColumns="True"
                          HeadersVisibility="Column"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto"
                          BorderThickness="1"
                          BorderBrush="#CCC"
                          GridLinesVisibility="None"
                          Margin="0,0,0,10">
                    <DataGrid.Resources>
                        <Style TargetType="{x:Type DataGridColumnHeader}">
                            <Setter Property="Background" Value="#F8F9FA"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Padding" Value="10"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            <Setter Property="BorderBrush" Value="#E0E0E0"/>
                            <Setter Property="Foreground" Value="Black"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="HorizontalContentAlignment" Value="Left"/>
                        </Style>
                    </DataGrid.Resources>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="Auto"/>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                        <DataGridTextColumn Header="Start Time" Binding="{Binding StartTime}" Width="*"/>
                        <DataGridTextColumn Header="End Time" Binding="{Binding EndTime}" Width="*"/>
                        <DataGridTemplateColumn Header="Actions" Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Content="Edit" Background="#FFC107" Foreground="White" BorderThickness="0" Padding="5,2" Margin="2,0"/>
                                        <Button Content="Delete" Background="#E35050" Foreground="White" BorderThickness="0" Padding="5,2" Margin="2,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Pagination -->
                <Grid Grid.Row="3" Margin="0,15,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Entry info -->
                    <TextBlock Grid.Column="0" 
               Text="Showing 1 to 1 of 1 entries" 
               VerticalAlignment="Center" 
               Foreground="Gray"/>

                    <!-- Pagination buttons -->
                    <StackPanel Orientation="Horizontal" Grid.Column="1">
                        <Button Content="Previous" 
                Background="Transparent" 
                Foreground="#333" 
                BorderThickness="1" 
                Padding="5,2" 
                Margin="5,0"/>
                        <Button Content="1" 
                Background="#30ABA0" 
                Foreground="White" 
                BorderThickness="0" 
                Padding="5,2" 
                Margin="5,0"/>
                        <Button Content="Next" 
                Background="Transparent" 
                Foreground="#333" 
                BorderThickness="1" 
                Padding="5,2" 
                Margin="5,0"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
